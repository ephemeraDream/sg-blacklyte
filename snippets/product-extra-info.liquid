<style>
  .product_infor_simplicity .product_extrainfo {
    width: 100%;
    background: #f9fafb;
    border-radius: 0.625vw;
    padding: 0 1.2760417vw 0 1.354167vw;
    border: 1px solid #edeff2;
    margin-top: 1.5625vw;
  }
  .product_infor_simplicity .product_extrainfo_item {
    display: flex;
    align-items: center;
    gap: 0.729167vw;
    font-family: Roboto;
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0%;
    vertical-align: middle;
    padding: 1.1979167vw 0;
  }
  .product_infor_simplicity .product_extrainfo_item .size_large {
    font-size: 12px;
  }

  .product_infor_simplicity .product_extrainfo_item a {
    color: #0080fa;
  }

  .product_infor_simplicity .product_extrainfo_item a:hover {
    text-decoration: underline;
  }

  .product_infor_simplicity .product_extrainfo_item img,
  .product_infor_simplicity .product_extrainfo_item svg {
    flex: 0 0 auto;
    width: 20px;
    height: 20px;
  }
  .product_infor_simplicity .product_extrainfo_item + .product_extrainfo_item {
    border-top: 1px solid #edeff2;
  }
  .product_infor_simplicity .product_extrainfo_item:first-child {
    padding-top: 1.979167vw;
  }
  .product_infor_simplicity .product_extrainfo_item:last-child {
    padding-bottom: 1.5625vw;
  }

  @media screen and (max-width: 768px) {
    .product_infor_simplicity .product_extrainfo {
      margin-top: 10.67vw;
      border-radius: 3.2vw;
      padding: 0 4.8vw 0 6.933vw;
      border: none;
    }
    .product_infor_simplicity .product_extrainfo_item {
      gap: 3.733vw;
      line-height: 18px;
      padding: 5.33vw 0;
    }
    .product_infor_simplicity .product_extrainfo_item .size_large {
      font-size: 13px;
    }
    .product_infor_simplicity .product_extrainfo_item:first-child {
      padding-top: 6.933vw;
    }
    .product_infor_simplicity .product_extrainfo_item:last-child {
      padding-bottom: 9.6vw;
    }
  }
</style>

