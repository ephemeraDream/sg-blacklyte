    <div class="product_extrainfo_item">
      <img src="https://cdn.shopify.com/s/files/1/0663/6742/2695/files/header.webp?v=1743403185" alt="customer service">
      {% comment %}
        <div>
          <p class="size_large">{{ 'products.product.text.with_expert' | t }}</p>
          <a class="chat_now">{{ 'products.product.text.chat_now' | t }}</a>
        </div>
      {% endcomment %}
