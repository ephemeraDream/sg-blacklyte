<script>
  if(window.innerWidth > 1024) {
    // swiper
    let accessoriesSwiper = new Swiper('.header-nav-accessories-sections .accessories-container', {
      loop: true,
      grabCursor : true,
      simulateTouch: true,
      slidesPerView : 4
    })
    $('.nav-accessories-left').click(function(){
      accessoriesSwiper.slidePrev();
    })
    $('.nav-accessories-right').click(function(){
      accessoriesSwiper.slideNext();
    })
  }
  
  
  $('.header-nav-accessories-sections .accessories-container .nav-accessories-items').on('click', function(event){
      event.preventDefault()
      event.stopPropagation()
      const url = $(this).data('url')
      if(!url) return false
      window.location.href = url
  })

  // 当鼠标离开 .header-nav-accessories-sections 时隐藏
  $('.header-nav-accessories-sections').on('mouseleave', function() {
      $(this).css({
        'opacity': '0',
        'max-height': '0',
        'border-top': 'none',
        'border-bottom': 'none'
      });
  })

  // 回退上一步
  $('.header-nav-accessories-sections .header-nav-accessories-title .accessories_collections_title_icon').on('click', function() {
      $('.header-nav-accessories-sections').removeClass('menu_open_accessories_mb_active')
      $('body').removeClass('menu_open_mb')
  })
</script>
