{% comment %}
    This template will be automatically generated for you if the file doesn't exist,
    but where's the fun in having no control? Define your layout below.

    The 'layout settings.customer_layout' line is inserted at the top of every customer account template.
    Your theme's settings determine to use the 'default' or 'theme' customer templates.
    More info:
        - http://www.tetchi.ca/shopify-theme-from-scratch-part-11/

    Template note:
        - All IDs on this template are required to make the forms submit properly
        - There are two instances of inline JS below. Best practices advise separating this into an external JS file.
{% endcomment %}
{{ 'customer.css' | asset_url | stylesheet_tag }}
{%- liquid
    assign container = section.settings.container
    assign padding_full_width = section.settings.padding_full_width
-%}

<style>
  /* .section-block-{{section.id}} {
    position: relative;
  } */
  .login_conatiner{
    height: 100vh;
    background: url('https://cdn.shopify.com/s/files/1/0663/6742/2695/files/warranty-bgimg.png?v=1725863053') no-repeat;
    background-size: 100% 100%;
    padding-top: 100px;
  }
  .login_conatiner .page-subheader,
  .login_conatiner .login-text,
  .login_conatiner label,
  .login_conatiner .login-item .form-input,
  .login_conatiner a{
    color: #fff;
  }
  .login_conatiner .logo_img {
    width: 180px;
    height: 112px;
    margin: 0 auto;
  }
  .login_conatiner .halo-page-wrapper {
    padding: 50px 20px 0 20px;
  }
  .login_conatiner .login-item .form-actions .button {
    width: 100%;
    margin-bottom: 10px;
  }
  .login_conatiner .redirect_recover {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 10px;
  }
  .login_conatiner .links_icon_svg svg {
    width: 20px;
    height: 20px;
    stroke: none;
  }
  .login_conatiner .redirect_recover a{
    text-decoration: underline;
  }
  .login_conatiner .login-item .form-input {
    border-color: #fff;
    line-height: 30px;
  }
  .prod_modal-layout {
    width: 100vw;
    height: 100vh;
    max-width: 100vw;
    max-height: 100vh;
    overflow: hidden;
    opacity: 1;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    transition: all .3s ease-in-out;
  }
  .prod_modal-layout .prod_model-video{
    width: 100%;
    height: auto;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    opacity: 1;
    transition: all .3s ease-in-out;
  }
</style>

<div class="account-page login-page section-block-{{section.id}}">
  <div class="{% if container == '1170' %}container-1170{% elsif container == '1570' %}container-1570{% elsif container == '1770' %}container-1770{% elsif container == 'fullwidth'%}container-full{% else %}container{% endif %} login_conatiner">
    <img class="logo_img" src="https://cdn.shopify.com/s/files/1/0663/6742/2695/files/warranty_logo_L.png?v=1726898175" />
        <div class="login-item" id="login">
          <div class="halo-page-wrapper">
            <div class="login-text">
              Register to activate 2 years of extended warranty service.
            </div>
            {% comment %}
                If a user has successfully requested a new password, the form.posted_successfully? variable
                is set to true within the 'recover_customer_password' form only. Within that form you'll see
                us assign a variable 'reset_success' to true, which is used in JS to show our success message.
            {% endcomment %}
            {% comment %}
                This form must use 'customer_login'
            {% endcomment %}
            {%- form 'customer_login', return_to: '/pages/warranty-qrc', class: 'customer-login-form' -%}
                {%- if form.errors -%}
                    {%- assign message = form.errors.messages['form'] -%}
                    <div class="form-message">
                        <div class="alertBox alertBox--error">
                            <p class="alertBox-message">
                                {{ message }}
                            </p>
                        </div>
                    </div>
                {%- endif -%}
                <div class="form-field{% if form.errors contains "email" %} form-field--error{% endif %}">
                    <label class="form-label" for="CustomerEmail">
                        {{ 'customer.login_page.email' | t }}
                        <em>*</em>
                    </label>
                    <input
                        class="form-input form-input-placeholder{% if form.errors contains "email" %} error{% endif %}"
                        type="email"
                        value=""
                        name="customer[email]"
                        autocomplete="email"
                        autocorrect="off"
                        autocapitalize="off"
                        id="CustomerEmail"
                        {% if form.errors contains 'form' %}
                            aria-invalid="true"
                        {% endif %}
                        placeholder=""
                        aria-required="true"
                        aria-invalid="true"
                        required
                    >
                </div>
                {%- if form.password_needed -%}
                    <div class="form-field{% if form.errors contains "password" %} form-field--error{% endif %}">
                        <label class="form-label" for="CustomerPassword">
                            {{ 'customer.login_page.password' | t }}
                            <em>*</em>
                        </label>
                        <input
                            class="form-input form-input-placeholder{% if form.errors contains "password" %} error{% endif %}"
                            type="password"
                            value=""
                            name="customer[password]"
                            id="CustomerPassword"
                            autocomplete="current-password"
                            {% if form.errors contains 'form' %}
                                aria-invalid="true"
                            {% endif %}
                            aria-required="true"
                            required
                        >
                    </div>
                {%- endif -%}
                <div class="form-actions">
                    <input type="submit" class="button button-2" value="{{ 'customer.login_page.title' | t }}" id="login_button_submit">
                </div>
                <div class="redirect_recover">
                  <!-- <a href="javascript:void(0)" class="link link-underline" id="lost_psd_links">
                      <span class="text">{{ 'customer.login_page.forgot_password' | t }}</span>
                  </a> -->
                  <a href="javascript:void(0)" class="link link-underline" id="reg_links">
                      <span class="text">register</span>
                      <span class="links_icon_svg">
                        <svg width="20" height="16" viewBox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M19.7071 8.70711C20.0976 8.31658 20.0976 7.68342 19.7071 7.29289L13.3431 0.928932C12.9526 0.538408 12.3195 0.538408 11.9289 0.928932C11.5384 1.31946 11.5384 1.95262 11.9289 2.34315L17.5858 8L11.9289 13.6569C11.5384 14.0474 11.5384 14.6805 11.9289 15.0711C12.3195 15.4616 12.9526 15.4616 13.3431 15.0711L19.7071 8.70711ZM0 9H19V7H0V9Z" fill="white"/>
                        </svg>
                      </span>
                  </a>
                </div>
            {%- endform -%}
        </div>
    </div>
  </div>
  <div class="prod_modal-layout">
    <video id="myVideo" muted autoplay playsinline preload="auto" class="prod_model-video">
      <source type="video/mp4" src="https://cdn.shopify.com/videos/c/o/v/3502fd9c83f74903950529211e0db442.mp4" />
    </video>
  </div>
</div>

<script>
  function getQueryParameter(name) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(name);
  }
  const codeVal = new URLSearchParams(window.location.search).get('code')
  const getProdType = async (codeVersionFif) => {
    if(codeVersionFif.includes('DASE')) {
      // 升降桌
      return 'isAdjustDesk'
    } else if(codeVersionFif.includes('DATL')) {
      // 灯桌
      return 'isAtlasDesk'
    } else if(codeVersionFif.includes('CAT-S')) {
      // athena 低配
      return 'isAthena'
    } else if(codeVersionFif.includes('CAT-L')) {
      // athena 高配
      return 'isAthenaPro'
    } else if(codeVersionFif.includes('CKR-S')) {
      // kraken低配
      return 'isKraken'
    } else if(codeVersionFif.includes('CKR-L')) {
      // kraken高配
      return 'isKrakenPro'
    } else if (codeVersionFif.includes('ZJ')) {
      // 机械臂
      return 'isMonitorArm'
    } else if(codeVersionFif.includes('CAX')) {
      // athenax
      return "isAthenaX"
    }
  }
  
  (async () => {
    if (codeVal) {
      sessionStorage.setItem('qrcode', codeVal)
      const codeVersionFif = codeVal.slice(0, 5);
      const prodType = await getProdType(codeVersionFif);
  
      // video DOM
      const videoDom = document.getElementById('myVideo')
      const source = videoDom.querySelector('source');
      let newSrc = ''
      switch(prodType) {
        case 'isAdjustDesk':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/99caf21732ff44d09680f273a7ff75d0.mp4'
          break;
        case 'isAtlasDesk':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/91bd2bb2dd034a269f06f9a34b4d8940.mp4'
          break;
        case 'isAthena':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/3502fd9c83f74903950529211e0db442.mp4'
          break;
        case 'isAthenaPro':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/93f67ff1374b45949fc65775f42e1d93.mp4'
          break;
        case 'isKraken':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/1090f83b9b0242ef8c99fbdd72e470ba.mp4'
          break;
        case 'isKrakenPro':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/d6ded6eede1746f6b70937a0724803e9.mp4'
          break;
        case 'isAthenaX':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/cf3a3aa5f9ac459cb39f90887b9d7482.mp4'
          break;
        case 'isMonitorArm':
          newSrc = 'https://cdn.shopify.com/videos/c/o/v/801c74481d9c4015b736175d7fcc8095.mp4'
          break;
        default:
          newSrc = ''
      }
      if(newSrc) {
        source.src = newSrc
        videoDom.load()
      }
      
      videoDom.addEventListener('ended', () => {
        document.querySelector('.prod_modal-layout').style.opacity = 0
        document.querySelector('.prod_modal-layout').style.display = 'none'
        videoDom.style.opacity = 0
        videoDom.style.display = 'none'
      });
    }
  })();
  
  
  (function ($) {
    $('#reg_links').click(function () {
      let code = getQueryParameter('code')
      if(!code) return false
      window.location.href="/pages/warranty-reg?code=" + code
    })

    $('#lost_psd_links').click(function () {
      let code = getQueryParameter('code')
      if(!code) return false
      window.location.href="/pages/warranty-resetw?code=" + code
    })
    
    sessionStorage.setItem('qrcode', getQueryParameter('code'))
  })(jQuery)

</script>

{% schema %}
  {
    "name": "Warranty Login",
    "settings": [
      {
          "type": "select",
          "id": "container",
          "label": "t:sections.layout.container.option",
          "default": "container",
          "options": [
              {
                  "value": "container",
                  "label": "t:sections.layout.container.option1"
              },
              {
                  "value": "1170",
                  "label": "t:sections.layout.container.option4"
              },
              {
                  "value": "1570",
                  "label": "Width (1570px)"
              },
              {
                  "value": "1770",
                  "label": "t:sections.layout.container.option3"
              },
              {
                  "value": "fullwidth",
                  "label": "t:sections.layout.container.option2"
              }
          ]
      },
      {
          "type": "range",
          "id": "padding_full_width",
          "label": "t:sections.layout.container.padding_full_width",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "t:sections.layout.fontsize.fontsize_title.unit",
          "default": 0,
          "info": "t:sections.layout.container.info_full_width"
      }
    ],
    "presets": [
      {
        "name": "Warranty Login"
      }
    ]
  }
{% endschema %}