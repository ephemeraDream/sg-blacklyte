  {
    "name": "New Collection AddOns",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "sectionsID",
        "label": "Section ID"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Chair add-ons"
      },
      {
        "type": "text",
        "id": "descripe",
        "label": "Section Desc",
        "default": "Personalize your agent experience"
      },
      {
        "type": "text",
        "id": "view_all_chairs",
        "label": "Section View All",
        "default": "VIEW ALL  >"
      },
      {
        "type": "url",
        "id": "view_all_link",
        "label": "Section View All Link"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "ItemImage",
            "label": "Item Image"
          },
          {
            "type": "image_picker",
            "id": "ItemImageMb",
            "label": "Item Image Mobile"
          },
          {
            "type": "text",
            "id": "ItemTitle",
            "label": "Item Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Item Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "New Collection AddOns"
      }
    ]
  }
{% endschema %}