                    {{ product_card_product.selected_or_first_available_variant.option3 }}
                 </div>
                 <div class="flex-1"></div>
                 <div class="prod_item_price">
                   <div class="price">
                     <!-- {% if product_card_product.selected_or_first_available_variant.metafields.custom.discount_price.value %}
                       <span class="prod_item_discount_price">
                          {{
                            product_card_product.price
                            | minus: product_card_product.selected_or_first_available_variant.metafields.custom.discount_price.value
                            | money_without_currency
                          }}
                       </span>
                     {% endif %} -->
