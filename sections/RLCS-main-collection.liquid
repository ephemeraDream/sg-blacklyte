<section class="hltv-event">
  <div class="container-1570 hltv-event-container">
    <div class="event-cont">
      {% for block in section.blocks %}
        {% if block.type == 'chairsItem' %}
          <div class="header-title">
            {% if block.settings.chairs_title_image != blank %}
              <div class="chairs_title-image-block">
                <img src="{{ block.settings.chairs_title_image | img_url:'master' }}" />
              </div>
            {% else %}
              <span class="text">{{ block.settings.charis_title }}</span>
            {% endif %}
          </div>
          <div class="block-chair-cont" data-href="{{ block.settings.chairs_top_pick_LINK }}">
            <div class="top_pick">
              <div class="left image-zoom">
                <img src="{{ block.settings.chairs_top_pick | img_url:'master' }}">
              </div>
              <div class="right">
                <div class="top_pick_subtitle">
                  <span>{{ block.settings.chairs_top_pick_subtitle }}</span>
                </div>
                <div class="top_pick_title">
                  <span>{{ block.settings.chairs_top_pick_title }}</span>
                </div>
                <div class="top_pick_desc">
                  <span>{{ block.settings.chairs_top_pick_descripe }}</span>
                </div>
                <div class="top_pick_prices">
                  <span class="discount-price">{{ block.settings.chairs_top_pick_discount_price }}</span>
                  <span class="sale-price">{{ block.settings.chairs_top_pick_sale_price }}</span>
                </div>
                <div data-href="{{ block.settings.chairs_top_pick_LINK }}" class="top_pick_btn">
                  <span>{{ block.settings.chairs_top_pick_shopnow }}</span>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
      <div class="prod_lists chairs_prod_lists">
        {%- for product_card_product in collection.products -%}
          {%-liquid
            assign variant_img = ''
            for option in product_card_product.options_with_values
                for variant in product_card_product.variants limit: 1
                    if variant.image != null  
                        assign variant_img = variant.image
                    endif
                endfor
            endfor
          -%}
           <div class="prod_item" data-product-id="{{ product_card_product.id }}" style="{% if product_card_product.title contains 'Gaming Chair' %}display: block; {% else %} display: none; {% endif %}">
              <div class="container">
               <div class="card-product">
                 {% render 'product-badge', product: product_card_product, class: 'card__badge', badge_detail: true, serial: serial %}
                 <div class="card-media card-media--adapt {% if product_card_product.media[1] != nil and settings.show_image_swap %} media--hover-effect{% endif%} media--loading-effect" style="padding-bottom: {{ 1.1 | times: 100 }}%;">
                    {% render 'image-product-card', product_card_product: product_card_product, variant_img: variant_img, has_video: false, loading: true %}
                    <a class="card-link" href="{{ product_card_product.url }}" title="{{ product_card_product.title | escape }}"></a>
                 </div>
               </div>
               <div class="prod_card_info">
                 <div class="prod_item_title">
                   <span>{{ product_card_product.title}}</span>
                 </div>
                 <div class="prod_item-variants">
                    {{ product_card_product.selected_or_first_available_variant.option3 }}
                 </div>
                 <div class="flex-1"></div>
                 <div class="prod_item_price">
                   <div class="price">
                     <span class="prod_item_sale_price">{{ product_card_product.selected_or_first_available_variant.price | money }}</span>
                   </div>
                   <a class="shop_now_btn" href="{{ product_card_product.url }}">{{ 'products.product.shop_now' | t }}</a>
                 </div>
                </div>
             </div>
           </div>
        {% endfor %}
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'desksItem' %}
          <div class="header-title desk-header-title">
            {% if block.settings.desks_title_image != blank %}
              <div class="chairs_title-image-block desks_title-image-block">
                <img src="{{ block.settings.desks_title_image | img_url:'master' }}" />
              </div>
            {% else %}
              <span>{{ block.settings.desks_title }}</span>
            {% endif %}
          </div>
          <div class="block-chair-cont" data-href="{{ block.settings.desks_top_pick_LINK }}">
            <div class="top_pick">
              <div class="left image-zoom">
                <img src="{{ block.settings.desks_top_pick | img_url:'master' }}">
              </div>
              <div class="right">
                <div class="top_pick_subtitle">
                  <span>{{ block.settings.desks_top_pick_subtitle }}</span>
                </div>
                <div class="top_pick_title">
                  <span>{{ block.settings.desks_top_pick_title }}</span>
                </div>
                <div class="top_pick_desc">
                  <span>{{ block.settings.desks_top_pick_descripe }}</span>
                </div>
