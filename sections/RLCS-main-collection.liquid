                    endif
                endfor
            endfor
          -%}
           <div class="prod_item" data-product-id="{{ product_card_product.id }}" style="{% if product_card_product.title contains 'Desk' %}display: block; {% else %} display: none; {% endif %}">
             <div class="container">
               <div class="card-product">
                 {% render 'product-badge', product: product_card_product, class: 'card__badge', badge_detail: true, serial: serial %}
                 <div class="card-media card-media--adapt {% if product_card_product.media[1] != nil and settings.show_image_swap %} media--hover-effect{% endif%} media--loading-effect" style="padding-bottom: {{ 1.1 | divided_by: 1 | times: 100 }}%;">
                    {% render 'image-product-card', product_card_product: product_card_product, variant_img: variant_img, has_video: false, loading: true %}
                    <a class="card-link" href="{{ product_card_product.url }}" title="{{ product_card_product.title | escape }}"></a>
