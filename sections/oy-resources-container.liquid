    }
    .recommend_container .resources_box_container .box_contents_lists.box_contents_lists_mobile{
      display: flex;
    }
  }
</style>

<section id="{{ section.settings.sectionId }}" class="resource_container_section">
  <div class="resource_container_module">
    <div class="recommend_container">
      <div class="recommend_container_title">{{ section.settings.recommendContainerTitle }}</div>
      <div class="recommend_container_box">
        <div class="container_sizes_box">
          <div class="sizes_image">
            {%- if section.settings.sizesImage != blank -%}
              <a class="image image-adapt" role="link" aria-disabled="false">
                {%- assign height_img = section.settings.sizesImage.width
                  | divided_by: section.settings.sizesImage.aspect_ratio
                  | round
                -%}
                {{
                  section.settings.sizesImage
                  | image_url: width: 3840
                  | image_tag:
                    loading: 'lazy',
                    class: 'lazyload',
                    height: height_img,
                    sizes: '100vw',
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                }}
              </a>
            {%- endif -%}
          </div>
          <div class="sizes_container">
            <div class="sizes_container_box1">
              <div class="size_title">{{ section.settings.RecommendedSizeTitle }}</div>
              {%- if section.settings.RecommendedSizeHTML != blank -%}
                <div>{{ section.settings.RecommendedSizeHTML }}</div>
              {%- else -%}
                <div class="size_desc1 size_desc">{{ section.settings.RecommendedSizeDesc1 }}</div>
                <div class="size_desc2 size_desc">{{ section.settings.RecommendedSizeDesc2 }}</div>
              {%- endif -%}
            </div>
            <div class="container_center_line"></div>
            <div class="sizes_container_box2">
              <div class="size_title">{{ section.settings.RecommendedComponentTitle }}</div>
              {%- if section.settings.RecommendedComponentHTML != blank -%}
                <div>{{ section.settings.RecommendedComponentHTML }}</div>
              {%- else -%}
                {%- if section.settings.HeadrestValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Head Pillow :</span>
                    <span class="component_value">{{ section.settings.HeadrestValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.WaistAdjustmentValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Lumbar Support :</span>
                    <span class="component_value">{{ section.settings.WaistAdjustmentValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.SkeletonValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Frame Construction :</span>
                    <span class="component_value">{{ section.settings.SkeletonValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.HandrailValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Armrests :</span>
                    <span class="component_value">{{ section.settings.HandrailValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.TrayValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Tilt Mechanism :</span>
                    <span class="component_value">{{ section.settings.TrayValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.AirBarValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Hydraulic Gas Piston :</span>
                    <span class="component_value">{{ section.settings.AirBarValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.FiveStarFeetValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Wheelbase :</span>
                    <span class="component_value">{{ section.settings.FiveStarFeetValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.ContactRollerValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Caster :</span>
                    <span class="component_value">{{ section.settings.ContactRollerValue }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.AngleAdjustmentValue != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Reclining Angle :</span>
                    <span class="component_value">{{ section.settings.AngleAdjustmentValue }}</span>
                  </div>
                {%- endif -%}
              {%- endif -%}
            </div>
            <div class="container_center_line"></div>
            <!-- ElectricalSpecifications for Atlas Desk -->
            {%- if section.settings.ElectricalSpecificationsTitle != blank -%}
              <div class="Specification_container_box4">
                <div class="size_title">{{ section.settings.ElectricalSpecificationsTitle }}</div>
                {%- if section.settings.DeskInputVoltage != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Desk Input Voltage:</span>
                    <span class="component_value">{{ section.settings.DeskInputVoltage }}</span>
                  </div>
                {%- endif -%}
                {%- if section.settings.NumberOfMotors != blank -%}
                  <div class="component_items component_headrest">
                    <span class="component_key">Number of Motors:</span>
                    <span class="component_value">{{ section.settings.NumberOfMotors }}</span>
                  </div>
                {%- endif -%}
              </div>
              <div class="container_center_line"></div>
            {%- endif -%}
            <div class="sizes_container_box3 {% if section.settings.ElectricalSpecificationsTitle != blank %}sizes_container_box3_desk{% endif %}">
              <div class="size_title">{{ section.settings.PackagingTitle }}</div>
              {%- if section.settings.PackageSizeValue != blank -%}
                <div class="component_items component_headrest">
                  <span class="component_key">Package size :</span>
                  <span class="component_value">{{ section.settings.PackageSizeValue }}</span>
                </div>
              {%- endif -%}
              {%- if section.settings.NetWeightValue != blank -%}
                <div class="component_items component_headrest">
                  <span class="component_key">Net weight :</span>
                  <span class="component_value">{{ section.settings.NetWeightValue }}</span>
                </div>
              {%- endif -%}
              {%- if section.settings.GrossWeightValue != blank -%}
                <div class="component_items component_headrest">
                  <span class="component_key">Gross weight :</span>
                  <span class="component_value">{{ section.settings.GrossWeightValue }}</span>
                </div>
              {%- endif -%}
            </div>
            <div class="container_center_line"></div>
          </div>
        </div>
        <!-- What‘s in the box -->
        <div class="resources_box_container">
          <div class="box_container_content">
            <div class="size_title">{{ section.settings.boxContentsTitle }}</div>
            <div class="box_contents_lists box_contents_lists_web">
              {{ section.settings.boxLists }}
            </div>
            <div class="box_contents_lists box_contents_lists_mobile">
              {{ section.settings.boxLists_mobile }}
            </div>
          </div>
          <div class="box_content_image">
            {%- if section.settings.boxContentsImage != blank -%}
              <a class="image image-adapt" role="link" aria-disabled="false">
                {%- assign height_img = section.settings.boxContentsImage.width
                  | divided_by: section.settings.boxContentsImage.aspect_ratio
                  | round
                -%}
                {{
                  section.settings.boxContentsImage
                  | image_url: width: 3840
                  | image_tag:
                    loading: 'lazy',
                    class: 'lazyload',
                    height: height_img,
                    sizes: '100vw',
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                }}
              </a>
            {%- endif -%}
          </div>
          <div class="size_title size_title_mb">{{ section.settings.boxContentsTitle }}</div>
        </div>
        <div class="resources_box_container_bottom_line"></div>
        <!-- 安装视频 & 说明书 -->
        <div class="resources_video_usermanual">
          <div class="resources_video">
            <div class="resources_video_image" data-fancybox="video-gallery" href="{{ section.settings.resourcesVideoLink }}">
              <div class="logo_image">
