      font-size: 20px;
      line-height: 38px;
      margin-bottom: 20px;
    }
    .recommend_container .recommend_container_box {
      width: 100%;
    }
    .recommend_container .recommend_container_box .container_sizes_box .sizes_container,
    .recommend_container .recommend_container_box .container_sizes_box .sizes_image,
    .recommend_container .resources_box_container .box_container_content,
    .resources_video_usermanual {
      padding-left: 10px;
      padding-right: 10px;
    }
    .recommend_container .recommend_container_box .container_sizes_box .sizes_image {
      width: 100%;
      height: 400px;
      max-width: 100%;
      max-height: 400px;
    }
    .recommend_container .resources_box_container {
      justify-content: flex-start;
      flex-direction: column-reverse;
      margin-top: 0px;
    }
    .recommend_container .resources_box_container .box_content_image {
      width: 100%;
      height: 350px;
      max-width: 100%;
      max-height: 350px;
      padding: 0 20px;
    }
    .recommend_container .resources_box_container .box_content_image img {
      object-fit: contain;
    }
    .recommend_container .resources_box_container .box_container_content .size_title {
      font-size: 0px;
      display: none;
    }
    .recommend_container .resources_box_container .size_title.size_title_mb {
      display: block;
      font-family: 'Roboto';
      font-size: 20px;
      line-height: 39px;
      font-weight: 500;
      color: #333;
      margin-bottom: 14px;
      text-align: center;
    }
    .resources_video_usermanual {
      flex-direction: column;
      padding-top: 20px;
      padding-bottom: 50px;
    }
    .resources_video_usermanual .resources_video_image {
      position: relative;
      width: 180px;
      height: 140px;
    }
    .resources_video_usermanual .resources_video_image .resources_video_image_bgImg {
      width: 100%;
      height: 100%;
    }
    .resources_video_usermanual .resources_usermanual_image {
      width: 180px;
      height: 130px;
    }
    .resources_video_usermanual .resources_video_image .image.image-adapt {
      width: 100%;
    }
    .resources_video_usermanual .resources_usermanual {
      margin-top: 30px;
    }
    .resources_video_usermanual .resources_video_content,
    .resources_video_usermanual .resources_usermanual_content {
      margin-left: 19px;
    }
    .resources_video_usermanual .title {
      font-size: 14px;
      line-height: 26px;
    }
    .resources_video_usermanual .desc {
      font-size: 12px;
      line-height: 16px;
    }
    .resources_video_usermanual .play_button {
      font-size: 12px;
      line-height: 34px;
    }
    .resources_usermanual_product_text {
      font-size: 16px;
      line-height: 26px;
    }
    .resources_usermanual_tag_text {
      font-size: 12px;
    }
    .resources_video_usermanual .resources_usermanual.driver_download_box {
      display: none;
    }
    /* FAQS */
    #resources-container-sectionID .container-full {
      width: 90%;
    }
    #resources-container-sectionID .collapsible-content {
      width: 100%;
    }
    #resources-container-sectionID .halo-block-header .title .text {
      font-size: 24px;
    }
    #resources-container-sectionID .collapsible-grid .faqs-item .title {
      font-size: 14px;
    }
    #resources-container-sectionID .collapsible-grid .faqs-item .card-body {
      font-size: 12px;
      padding-left: 14px;
      line-height: 18px;
      padding-right: 14px;
    }
    #resources-container-sectionID .icon_before_title {
      margin-left: 10px;
      margin-right: 10px;
    }
    .resource_container_module .bottom_line_recommend_container {
