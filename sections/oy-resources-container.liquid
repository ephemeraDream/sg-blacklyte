<link rel="stylesheet" href="{{ 'component-fancybox.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-fancybox.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .image_mb {
    display: none;
  }
  .container_image {
    max-height: 700px;
  }
  .container_image img {
    height: 100%;
    max-height: 100%;
  }
  .image_pc {
    display: block;
  }
  .resource_container_module .resource_container {
    position: relative;
  }

  .resource_container_module .container_content {
    position: absolute;
    left: 50%;
    bottom: 50px;
    transform: translateX(-50%);
    text-align: center;
  }
  .resource_container_module .container_content .container_title {
    font-family: 'Roboto';
    font-size: 30px;
    line-height: 50px;
    color: #fff;
  }
  .resource_container_module .container_content .container_desc {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 26px;
    color: #fff;
  }
  .recommend_container,
  .resource_container_section {
    background-color: #e9e9e9;
  }
  .recommend_container .recommend_container_title {
    font-family: 'Roboto';
    font-size: 38px;
    line-height: 58px;
    color: #18181b;
    font-weight: 500;
    text-align: center;
    padding-top: 100px;
    margin-bottom: 70px;
  }
  .recommend_container .container_center_line {
    display: block;
    height: 1px;
    width: 100%;
    background-color: #999999;
    margin-top: 30px;
    margin-bottom: 40px;
    transform: scaleY(0.5);
  }
  .recommend_container .recommend_container_box {
    width: 70%;
    margin-left: auto;
    margin-right: auto;
  }
  .recommend_container .recommend_container_box .container_sizes_box,
  .recommend_container .resources_box_container {
    display: flex;
    justify-content: space-around;
  }
  .recommend_container .recommend_container_box .container_sizes_box .sizes_image {
    width: 600px;
    height: 600px;
    max-width: 600px;
    max-height: 600px;
    margin-right: 150px;
    margin-top: auto;
    margin-bottom: auto;
    flex: 0 0 600px;
  }
  .recommend_container .resources_box_container .box_content_image {
    width: 600px;
    height: 400px;
    max-width: 600px;
    max-height: 400px;
  }
  .recommend_container .recommend_container_box .container_sizes_box .sizes_image img,
  .recommend_container .resources_box_container .box_content_image img {
    height: 100%;
    object-fit: contain;
  }
  .recommend_container .recommend_container_box .container_sizes_box .sizes_container {
    flex: auto;
  }
  .recommend_container .recommend_container_box .container_sizes_box .sizes_container .size_title,
  .recommend_container .resources_box_container .box_container_content .size_title {
    font-family: 'Roboto';
    font-size: 20px;
    line-height: 39px;
    font-weight: 500;
    color: #333;
    margin-bottom: 14px;
  }
  .recommend_container .recommend_container_box .container_sizes_box .sizes_container .size_desc {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 26px;
    font-weight: 400;
    color: #333333;
  }
  .recommend_container .recommend_container_box .container_sizes_box .component_items span {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 26px;
    font-weight: 400;
    color: #333;
    display: inline-block;
    vertical-align: text-top;
  }
  .recommend_container .recommend_container_box .container_sizes_box .component_items span.component_value {
    color: #666;
    width: 45%;
  }
  .recommend_container .recommend_container_box .container_sizes_box .component_items .component_key {
    width: 45%;
  }
  .recommend_container
    .recommend_container_box
    .container_sizes_box
    .sizes_container_box3_desk
    .component_items
    .component_key {
    display: block;
  }
  .recommend_container
    .recommend_container_box
    .container_sizes_box
    .sizes_container_box3_desk
    .component_items
    .component_value {
    width: 100%;
  }
  .recommend_container .resources_box_container {
    margin-top: 40px;
  }
  .recommend_container .resources_box_container .box_container_content {
    flex: auto;
  }
  .recommend_container .resources_box_container .box_contents_lists {
    display: flex;
    justify-content: space-between;
  }
  .recommend_container .resources_box_container .box_contents_lists.box_contents_lists_mobile {
    display: none;
  }
  .recommend_container .resources_box_container .box_contents_lists .column {
    display: flex;
    flex-direction: column;
    width: 45%; /* 可以调整宽度，避免太宽 */
  }

  .recommend_container .resources_box_container .box_contents_lists .column div {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 26px;
    font-weight: 400;
    color: #333333;
  }
  .recommend_container .resources_box_container_bottom_line {
    display: block;
    width: 100%;
    height: 1px;
    background-color: #999999;
    margin-top: 20px;
    transform: scaleY(0.5);
  }
  .resource_container_module .bottom_line_recommend_container {
    display: block;
    width: 70%;
    margin: 0 auto;
    height: 1px;
    background-color: #999999;
    transform: scaleY(0.5);
  }
  .recommend_container .resources_box_container .size_title.size_title_mb {
    display: none;
  }

  .resources_video_usermanual {
    display: flex;
    flex-wrap: wrap;
    padding-top: 100px;
    padding-bottom: 120px;
  }
  .resources_video_usermanual .title {
    font-family: 'Roboto';
    font-size: 20px;
    line-height: 30px;
    font-weight: 500;
    color: #333333;
  }
  .resources_video_usermanual .desc {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 26px;
    font-weight: 500;
    color: #999999;
  }
  .resources_video_usermanual .play_button .play_button_text {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 21px;
    font-weight: 500;
    color: #bd1b21;
    cursor: pointer;
    text-decoration: underline;
    text-underline-offset: 3px;
    margin-left: 4px;
  }

  .resources_video_usermanual .play_button .play_button_icon svg {
    fill: none;
    stroke: none;
    width: 14px;
    height: 14px;
  }

  .resources_video_usermanual .resources_video,
  .resources_video_usermanual .resources_usermanual {
    display: flex;
    flex-basis: 50%;
  }
  .resources_video_usermanual .resources_usermanual.driver_download_box {
    display: none;
    margin-top: 30px;
  }
  .resources_video_usermanual .resources_video_image .resources_video_image_bgImg {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 0;
  }
  .resources_video_usermanual .resources_video_image .logo_image {
    z-index: 1;
  }
  .resources_video_usermanual .resources_video_image,
  .resources_video_usermanual .resources_usermanual_image {
    width: 260px;
    height: 180px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: relative;
  }
  .resources_video_usermanual .resources_usermanual_image {
    border: 0.5px solid #333333;
    border-radius: 2px;
  }
  .resources_video_usermanual .resources_video_image img {
    height: 100%;
    max-height: 100%;
  }
  .resources_video_usermanual .resources_video_content,
  .resources_video_usermanual .resources_usermanual_content {
    margin-left: 30px;
    margin-top: auto;
    margin-bottom: auto;
  }
  .resources_usermanual_product_text {
    font-family: 'Roboto';
    font-size: 20px;
    line-height: 26px;
  }
  .resources_usermanual_product_text_video {
    color: #ffffff;
    z-index: 1;
  }
  .resources_usermanual_image .logo_image {
    width: 30px;
    height: 22px;
  }
  .resources_usermanual_image .logo_image img {
    height: 100%;
    max-height: 100%;
  }
  /* FAQ 模块 */
  #resources-container-sectionID .container-full {
    width: 70%;
    margin: 0 auto;
  }
  #resources-container-sectionID .halo-block-header .title .text {
    font-family: 'Roboto';
    font-size: 30px;
    font-weight: 500;
    color: #18181b;
  }
  #resources-container-sectionID .collapsible-grid .faqs-item .title {
    font-family: 'Roboto';
    font-size: 18px;
    font-weight: 500;
    color: #18181b;
    background-color: #f2f2f2;
    padding-top: 18px;
    padding-bottom: 18px;
    display: flex;
  }
  #resources-container-sectionID .faqs .faqs-item .card-header:not(.collapsed) + .collapse {
    border: 0.5px solid #d4d4d8;
  }
  #resources-container-sectionID .collapsible-grid .faqs-item {
    margin-bottom: 6px;
  }
  #resources-container-sectionID .collapsible-grid .faqs-item .card-body {
    font-family: 'Roboto';
    font-size: 14px;
    line-height: 30px;
    font-weight: 400;
    color: #52525b;
    padding-left: 54px;
    padding-right: 54px;
  }
  #resources-container-sectionID .icon_before_title {
    margin-left: 19px;
    margin-right: 19px;
    display: block;
  }
  #resources-container-sectionID .icon_before_title svg {
    width: 16px;
    height: 16px;
  }
  #resources-container-sectionID .collapsible-content {
    width: 90%;
  }

  /* 2000px+ */
  @media (min-width: 2000px) {
    .container_image {
      max-height: fit-content;
    }
  }

  /* 1025px ~ 1900px */
  @media (min-width: 1025px) and (max-width: 1900px) {
    .recommend_container .recommend_container_box,
    #resources-container-sectionID .container-full,
    .resource_container_module .bottom_line_recommend_container {
      width: 90%;
    }
  }

  /* 768px ~ 1024px */
  @media (min-width: 768px) and (max-width: 1024px) {
    .recommend_container .recommend_container_box,
    #resources-container-sectionID .container-full {
      width: 90%;
    }
    .recommend_container .recommend_container_box .container_sizes_box .sizes_image {
      width: 300px;
      height: 360px;
      max-width: 300px;
      max-height: 360px;
      margin-right: 50px;
      padding: 0 20px;
    }
  }

  /* iPhone */
  @media (max-width: 767px) {
    .image_pc {
      display: none;
    }
    .image_mb {
      display: block;
    }
    .resource_container_module .container_content {
      width: 100%;
    }
    .resource_container_module .container_content .container_title {
      font-size: 20px;
      line-height: 26px;
      padding-bottom: 10px;
    }
    .resource_container_module .container_content .container_desc {
      font-size: 11px;
      line-height: 14px;
    }
    .recommend_container .recommend_container_box .container_sizes_box {
      justify-content: normal;
      flex-direction: column;
    }
    .recommend_container .recommend_container_title {
