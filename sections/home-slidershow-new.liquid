    }
    .slide-show-block-img .content-btns,
    .slide-show-block-img .content-btns.content-btns-subtitle {
      top: calc(88% + 0px);
      transform: translate(-50%, -50%);
      left: 50%;
    }
    .slide-show-block-img .content-btns .btn,
    .slide-show-block-video .video-content-cont .video-btn {
      /* width: 120px; */
      padding-left: 30px;
