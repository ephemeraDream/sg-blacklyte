<section class="slide-show-section">
  <!-- 图片类型: largeImage -->
  <div class="slide-show-container swiper-wrapper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <!-- 图片 -->
        {% if block.type == 'largeImage' %}
          <div class="slide-show-block-img swiper-slide">
            {% if block.settings.Image != blank or block.settings.Image_mb != blank %}
              {%- assign img_url_mb = block.settings.Image_mb -%}
              {%- assign img_url = block.settings.Image -%}
              <div class="adaptive_height slide-item-image" style="padding-top: {% unless block.settings.Image.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: block.settings.Image.aspect_ratio | times: 120 }}%{% else %}{{ 1 | divided_by: block.settings.Image.aspect_ratio | times: 100 }}%{% endunless %}">
                <img {% if settings.enable_lazyload and forloop.first == false %}data-{% endif %}srcset="{%- if img_url.width < 320 -%}{{ img_url | image_url: width: img_url.width }} 320w,{%- endif -%}
                    {%- if img_url.width >= 320 -%}{{ img_url | image_url: width: 375 }} 375w,{%- endif -%}
                    {%- if img_url.width >= 740 -%}{{ img_url | image_url: width: 740 }} 740w,{%- endif -%} 
                    {%- if img_url.width >= 750 -%}{{ img_url | image_url: width: 750 }} 750w,{%- endif -%}
                    {%- if img_url.width >= 1100 -%}{{ img_url | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if img_url.width >= 1370 -%}{{ img_url | image_url: width: 1370 }} 1370w,{%- endif -%}
                    {%- if img_url.width >= 1500 -%}{{ img_url | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {%- if img_url.width >= 1770 -%}{{ img_url | image_url: width: 1770 }} 1770w,{%- endif -%}
                    {%- if img_url.width >= 1780 -%}{{ img_url | image_url: width: 1780 }} 1780w,{%- endif -%}
                    {%- if img_url.width >= 1880 -%}{{ img_url | image_url: width: 1880 }} 1880w,{%- endif -%}
                    {%- if img_url.width >= 2000 -%}{{ img_url | image_url: width: 2000 }} 2000w,{%- endif -%}
                    {%- if img_url.width >= 2800 -%}{{ img_url | image_url: width: 2800 }} 2800w{%- endif -%}"
                    sizes="{% if section.settings.image != blank and section.settings.stack_images_on_mobile %}(min-width: 750px) 50vw, 100vw{% elsif section.settings.image != blank %}50vw{% else %}100vw{% endif %}" {% unless settings.enable_lazyload and forloop.first == false %}src="{{ img_url | image_url: width: 750 }}"{% endunless %} alt="{{ img_url.alt  | escape }}" width="{{ img_url.width }}" height="{{ img_url.width | divided_by: img_url.aspect_ratio | round }}" 
                    {%- if settings.enable_lazyload and forloop.first == false -%}class="lazyload" loading="lazy"{%- endif -%}
                    {% unless img_url.presentation.focal_point == '50.0% 50.0%' %}style="object-position: {{ img_url.presentation.focal_point }}"{% endunless %}
                style="cursor: default;">{%- if settings.enable_lazyload and forloop.first == false -%}<span class="data-lazy-loading"></span>{%- endif -%}
              </div>
              <div class="adaptive_height slide-item-image_mb" style="padding-top: {% unless block.settings.Image_mb.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: block.settings.Image_mb.aspect_ratio | times: 120 }}%{% else %}{{ 1 | divided_by: block.settings.Image_mb.aspect_ratio | times: 100 }}%{% endunless %}">
                <img {% if settings.enable_lazyload and forloop.first == false %}data-{% endif %}srcset="{%- if img_url_mb.width < 320 -%}{{ img_url_mb | image_url: width: img_url_mb.width }} 320w,{%- endif -%}
                  {%- if img_url_mb.width >= 320 -%}{{ img_url_mb | image_url: width: 375 }} 375w,{%- endif -%}
                  {%- if img_url_mb.width >= 750 -%}{{ img_url_mb | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if img_url_mb.width >= 1100 -%}{{ img_url_mb | image_url: width: 1100 }} 1100w,{%- endif -%}
                  {%- if img_url_mb.width >= 1370 -%}{{ img_url_mb | image_url: width: 1370 }} 1370w,{%- endif -%}
                  {%- if img_url_mb.width >= 1500 -%}{{ img_url_mb | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {%- if img_url_mb.width >= 1780 -%}{{ img_url_mb | image_url: width: 1780 }} 1780w,{%- endif -%}
                  {%- if img_url_mb.width >= 2000 -%}{{ img_url_mb | image_url: width: 2000 }} 2000w,{%- endif -%}
                  {%- if img_url_mb.width >= 2800 -%}{{ img_url_mb | image_url: width: 2800 }} 2800w{%- endif -%}"
                  sizes="{% if section.settings.image != blank and section.settings.stack_images_on_mobile %}(min-width: 750px) 50vw, 100vw{% elsif section.settings.image != blank %}50vw{% else %}100vw{% endif %}" {% unless settings.enable_lazyload and forloop.first == false %}src="{{ img_url_mb | image_url: width: 750 }}"{% endunless %} alt="{{ img_url_mb.alt | escape }}" width="{{ img_url_mb.width }}" height="{{ img_url_mb.width | divided_by: img_url_mb.aspect_ratio | round}}"
                  {%- if settings.enable_lazyload and forloop.first == false -%}class="lazyload" loading="lazy"{%- endif -%}
                  {% unless img_url_mb.presentation.focal_point == '50.0% 50.0%' %}style="object-position: {{ img_url_mb.presentation.focal_point }}"{% endunless %}
                  style="cursor: default;">
                  {%- if settings.enable_lazyload and forloop.first == false -%}<span class="data-lazy-loading"></span>{%- endif -%}
              </div>
            {% endif %}
            <div class="slide-show-block-content {{ block.settings.title_image_class }}">
              {% if block.settings.subTitle != blank %}
                <div class="content-sub-title">{{ block.settings.subTitle }}</div>
              {% endif %}
              {% if block.settings.title != blank or block.settings.title_icon != blank %}
                {% if block.settings.title_icon != blank or block.settings.title_icon_mb != blank %}
                  <div class="content-title-image">
                    <img src="{{ block.settings.title_icon  | img_url:'master' }}" loading="lazy" class="title_icon-web">
                    <img src="{% if block.settings.title_icon_mb != blank %} {{ block.settings.title_icon_mb  | img_url:'master' }} {% else %} {{ block.settings.title_icon  | img_url:'master' }} {% endif %}" loading="lazy" class="title_icon-mb">
                  </div>
                {% else %}
                  <div class="content-title" style="{% if block.settings.titleColor != blank %}color: {{ block.settings.titleColor }};{% endif %}">{{ block.settings.title }}</div>
                {% endif %}
              {% endif %}
              {% if block.settings.descripe != blank %}
                <div class="content-desc">{{ block.settings.descripe }}</div>
              {% endif %}
            </div>
            <div class="content-btns {% if block.settings.subTitle != blank %}content-btns-subtitle{% endif %}" style="{% if block.settings.buts-custom-style != blank %}{{ block.settings.buts-custom-style }}{% endif %}">
              {% if block.settings.button_1 != blank %}
                <a role="link" {% if block.settings.button_1-link == blank %}aria-disabled="true" {% else %} href="{{ block.settings.button_1-link }}"{% endif %} class="buy-button btn" style="{% if block.settings.button_1-bgColor != blank %}background-color: {{ block.settings.button_1-bgColor }}; {% endif %}{% if block.settings.button_1-color != blank %}color: {{ block.settings.button_1-color }};{% endif %}">
                  {{ block.settings.button_1 }}
                </a>
              {% endif %}
              {% if block.settings.button_2 != blank %}
                <a role="link" {% if block.settings.button_2-link == blank %}aria-disabled="true" {% else %} href="{{ block.settings.button_2-link }}"{% endif %}  class="learn-more-button btn">
                  {{ block.settings.button_2 }}
                </a>
              {% endif %}
            </div>
          </div>
          <!-- 视频文件 -->
