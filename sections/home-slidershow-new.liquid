<style>
  .slide-show-section {
    width: 100vw;
    overflow: hidden;
  }
  .slide-show-section .slide-show-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }
  .slide-show-container .slide-show-block-img {
    width: 100%;
    height: 100%;
    position: relative;
  }
  .slide-item-image {
    display: block;
  }
  .slide-item-image_mb {
    display: none;
  }
  .slide-show-block-subscripe {
    position: relative;
  }
  .slide-show-block-img .slide-show-block-content,
  .slide-show-block-video .video-content-cont,
  .slide-show-block-subscripe .subscripe-cont {
    position: absolute;
    font-family: var(--font-family-1);
    top: 50%;
    transform: translateY(calc(-50%));
    left: 16%;
  }
  .slide-show-block-img .slide-show-block-content .content-title,
  .slide-show-block-video .video-content-cont .video-content-title{
    font: 600 40px var(--font-family-1);
    line-height: 1.4;
    color: #fff;
  }
  .content-title-image{
    width: 60%;
    height: auto;
    transform: translateY(-25px);
  }
  .content-title-image + .content-desc {
    transform: translateY(-30px);
  }
  .slide-show-block-img .slide-show-block-content.rlcs-custom-className .content-title-image + .content-desc,
  .slide-show-block-img .slide-show-block-content.ultra-edition-custom-className .content-title-image + .content-desc {
    font-weight: 600;
  }
  .content-title-image img.title_icon-web {
    display: block;
  }
  .content-title-image img.title_icon-mb{
    display: none;
  }
  .ultra-edition-custom-className .content-title-image{
    transform: translateY(-40px);
  }
  .slide-show-block-subscripe .subscripe-cont .sub-cont_title{
    font: 600 40px var(--font-family-1);
    line-height: 1.1;
    color: #fff;
  }
  .slide-show-block-img .slide-show-block-content .content-sub-title{
    font: 600 30px var(--font-family-1);
    line-height: 1;
    color: #fff;
  }
  .slide-show-block-img .slide-show-block-content.rlcs-custom-className .content-sub-title{
    transform: translateY(-50px);
  }
  .slide-show-block-img .slide-show-block-content.rlcs-custom-className .content-title-image{
    transform: translateY(-40px);
  }
  .slide-show-block-img .slide-show-block-content .content-desc,
  .slide-show-block-video .video-content-cont .video-content-desc,
  .slide-show-block-subscripe .subscripe-cont .sub-cont_desc {
    font: 400 20px var(--font-family-1);
    line-height: 1.4;
    color: #fff;
  }
  .slide-show-block-img .content-btns,
  .slide-show-block-video .video-buttons {
    display: flex;
    position: absolute;
    top: calc(50% + 90px);
    transform: translateY(-50%);
    left: 16%;
  }
  .slide-show-block-img .content-btns.content-btns-subtitle{
    top: calc(50% + 100px);
  }

  .slide-show-block-img .content-btns .btn,
  .slide-show-block-video .video-buttons .video-btn {
    border-radius: 30px;
    /* width: 170px; */
    padding-left: 50px;
    padding-right: 50px;
    line-height: 56px;
    text-align: center;
    font-size: 16px;
    font-weight: 500;
  }
  .slide-show-block-img .content-btns .buy-button,
  .slide-show-block-video .video-buttons .video-btn-1 {
    background-color: #fff;
    color: #000;
  }
  .slide-show-block-img .content-btns .learn-more-button,
  .slide-show-block-video .video-buttons .video-btn-2 {
    background: rgba(30, 30, 33, 0.8);
    color: #fff;
    margin-left: 20px;
  }
  
  .slide-show-container .slick-dots {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 34px;
    display: flex;
    width: auto;
    z-index: 2;
  }
  .slide-show-container .slick-dots .dot-item {
    display: block;
    width: 200px;
    height: 3px;
    background-color: rgba(255,255,255,0.3);
    border-radius: 3px;
  }
  .slide-show-container .slick-dots .dot-item:not(:first-child) {
    margin-left: 8px;
  }
  .slide-show-container .slick-dots .dot-item-active {
      display: block;
      width: 100%;
      height: 3px;
      background: rgba(255, 255, 255, 1);
      animation-name: increaseProgress;
      animation-fill-mode: forwards;
      animation-timing-function: ease-out;
      animation-iteration-count: infinite;
      transform: scaleX(0);
      transform-origin: center left;
      animation-play-state: running;
   }
  .slide-show-container .slick-dots .dot-item:nth-of-type(1) .dot-item-active {
    animation-duration: 12500ms;
  }
  .slide-show-container .slick-dots .dot-item:not(:first-child) .dot-item-active {
    opacity: 0;
  }
   @keyframes increaseProgress {
    0% {
        transform: scaleX(0);
    }
    100% {
        transform: scaleX(1);
    }
  }
  
  /* 视频 */
  .slide-show-block-video {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }
  .slide-show-block-video .block-video {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
  }
  .slide-show-block-video .block-video-pc{
    display: block;
  }
  .slide-show-block-video .block-video-pc-modal{
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
  }
  .slide-show-block-video .block-video_mb,
  .slide-show-block-video .block-video-mb,
  .slide-show-block-video .block-video_mb-img {
    display: none;
  }
  .slide-show-block-video .video-content {
    position: absolute;
    top: 50%;
    left: 16%;
  }

  /* 订阅 */
  .slide-show-block-subscripe .sub-cont-newsletter {
    margin-top: 20px;
  }
  .sub-cont-newsletter .newsletter-form__field-wrapper {
    display: flex;
    border: 1px solid #ffffff;
    border-radius: 30px;
    position: relative;
  }
  .sub-cont-newsletter .field__input{
    color: #fff;
    font: 500 16px var(--font-family-1);
    border: none;
    border-radius: 30px;
  }
  .sub-cont-newsletter .field__input::placeholder{
    font: 400 14px var(--font-family-1);
    color: rgba(255,255,255,0.5);
  }
  .sub-cont-newsletter .button.newsletter-form__button{
    font: 500 16px var(--font-family-1);
    color: #fff;
    border-radius: 30px;
    background-color: #FF0055;
    border-color: #FF0055;
    max-width: 170px;
    border: 2px solid #FF0055;
    position: absolute;
    right: -2px;
    top: -2px;
  }
  .sub-cont-subAgree {
    margin-top: 15px;
    display: flex;
    align-items: flex-start;
  }
  .sub-cont-subAgree input[type=checkbox]{
    display: block;
    width: 22px;
    height: 14px;
    margin-top: 5px;
    border: 0.5px solid #fff;
    position: static;
    margin-right: 10px;
    appearance: none;
    -webkit-appearance: none;
    position: relative;
    border-radius: 2px;
  }
  .sub-cont-subAgree input[type=checkbox]:checked::after {
    content: "\2713";
    position: absolute;
    top: 2px;
    left: 5px;
    width: 4px;
    height: 8px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }
  .sub-cont-subAgree .sub-cont-agreetinfo{
    font: 400 14px var(--font-family-1);
    color: #fff;
    line-height: 1.4;
    cursor: pointer;
  }
  .slide-show-block-subscripe .subscripe-cont{
    width: 500px;
  }

  /* 翻页icon */
  .pagination_icons .icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: rgba(40, 40, 40, 0.3);
    z-index: 2;
    text-align: center;
    line-height: 48px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .pagination_icons .left {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 18px;
  }
  .pagination_icons .right {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 18px;
  }
  .pagination_icons .left svg,
  .pagination_icons .right svg {
    fill: none;
    stroke: none;
    transition: all 0.3s ease-in-out;
  }
  .pagination_icons .left svg path,
  .pagination_icons .right svg path{
    stroke: rgba(255,255,255,0.7);
  }
  .pagination_icons .left:hover svg,
  .pagination_icons .right:hover svg {
    transform: scale(1.5);
  }
  .pagination_icons .left:hover svg path,
  .pagination_icons .right:hover svg path {
    stroke: #fff;
  }
  

  /* IPhone */
  @media(max-width: 767px) {
    .slide-show-block-img .slide-item-image,
    .slide-show-block-subscripe .slide-item-image {
      display: none;
    }
    .slide-show-block-video .block-video-pc{
      display: none;
    }
    .slide-show-block-video .block-video-mb,
    .slide-show-block-img .slide-item-image_mb,
    .slide-show-block-subscripe .slide-item-image_mb {
      display: block;
      width: 100%;
      height: 100%;
    }
    .slide-show-block-img .slide-show-block-content {
      width: 100%;
      text-align: center;
      top: 15%;
      left: 0;
    }
    .slide-show-block-img .slide-show-block-content.rlcs-custom-className{
