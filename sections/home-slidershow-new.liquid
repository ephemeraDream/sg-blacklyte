<script>
  const swiperSlide = new Swiper('.slide-show-container', {
    loop: true, // 无限循环
    slidesPerView: 1, // 一次显示几张（根据需要改）
    autoplay: {
      delay: 12000, // 每 3 秒切换一次
      disableOnInteraction: false, // 用户操作后是否停止自动播放
    },
    navigation: {
      nextEl: '.pagination_icons .right',
      prevEl: '.pagination_icons .left',
    },
  });
  
  // 监听真实索引变化（loop 模式下建议使用这个）
  swiperSlide.on('realIndexChange', function () {
    const totalDots = $('.slick-dots .dot-item').length;
  
    $('.slick-dots .dot-item').each(function (index) {
      const $dot = $(this).find('.dot-item-active');
  
      if (index === swiperSlide.realIndex) {
        // 当前正在播放的 dot：重播动画
        $dot.css({
          'animation': 'none',
          'opacity': 1
        });
  
        // 触发重绘
        void this.offsetWidth;
  
        // 重新播放动画
        $dot.css({
          'animation': 'increaseProgress 12500ms ease-out forwards'
        });
  
      } else if (index < swiperSlide.realIndex) {
        // 已经播完的：显示100%进度条（不重播）
        $dot.css({
          'animation': 'none',
          'opacity': 1,
          'transform': 'scaleX(1)'
        });
  
      } else {
        // 还未播放的：保持隐藏状态
        $dot.css({
          'animation': 'none',
          'opacity': 0,
          'transform': 'scaleX(0)'
        });
      }
    });
  });

  function setDotAnimationPause(pause) {
    $('.slick-dots .dot-item .dot-item-active').each(function () {
      $(this).css('animation-play-state', pause ? 'paused' : 'running');
    });
  }

  // 获取输入框元素
  const newsletterInput = document.querySelector('.sub-cont-newsletter .field__input');
  
  if (newsletterInput) {
    // 聚焦时停止轮播
    newsletterInput.addEventListener('focus', () => {
      swiperSlide.autoplay.stop();
      setDotAnimationPause(true);
    });
  
    // 失焦时恢复轮播
    newsletterInput.addEventListener('blur', () => {
      swiperSlide.autoplay.start();
      setDotAnimationPause(false);
    });
  
    // 输入时做一些其他处理
    newsletterInput.addEventListener('input', (e) => { });
  }


</script>

