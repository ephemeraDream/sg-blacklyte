    }
    .slide-show-block-img .slide-show-block-content.ultra-edition-custom-className{
      top: 34%;
    }
    .slide-show-block-content.ultra-edition-custom-className .content-title-image + .content-desc{
      transform: translateY(-160px);
      width: 80%;
      margin: auto;
    }
    .slide-show-block-video .video-content-cont{
      width: 80%;
      margin: 0 auto;
      text-align: center;
      /* top: 65%; */
      top: 45px;
      left: 50%;
      transform: translateX(-50%);
    }
    .slide-show-block-video .video-buttons{
      /* top: calc(84% + 0px); */
      top: calc(92% + 0px);
      /* transform: translate(-50%, -50%); */
      /* left: 50%; */
      width: 100%;
      left: 0;
      display: flex;
      justify-content: center;
    }
    .slide-show-block-video .video-buttons .video-btn-1,
    .slide-show-block-video .video-buttons .video-btn-2 {
