<style>
  .home_besetsells_collection{
    padding: 100px 0px 120px;
    position: relative;
    user-select: none;
  }
  .home_besetsells_collection .review-list{
    margin-top: 50px;
  }
  .home_besetsells_collection .review-wrapper {
    margin-left: 16%;
  }
  .home_besetsells_collection .review-wrapper .swiper-slide{
    height: auto;
    display: flex;
  }
  .home_besetsells_collection .review-list .link-cont{
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  .home_besetsells_collection img{
    width: 100%;
    object-fit: contain;
    height: auto;
    border-radius: 24px 24px 0 0 ;
  }
  .home_besetsells_collection .section-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 70%;
  }
  .home_besetsells_collection .review-title{
    font-family: "Roboto";
    color: #262629;
    text-align: left;
    font-size: 40px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
    padding: 0;
  }
  .home_besetsells_collection .review-link {
    font: 400 22px "Roboto";
    color: #76767F;
  }
  .home_besetsells_collection .review-link:hover {
    color: #262629;
  }
  
  .home_besetsells_collection .inner{
    background: #ffffff;
    border: 1px solid #EDEFF2;
    border-radius: 24px;
    display: flex;
    flex-direction: column;
  }
  .home_besetsells_collection .img-box{
    background-color: #f5f5f5;
    border-radius: 24px 24px 0 0;
    padding: 24px 62px;
  }
  .home_besetsells_collection .info-box {
    padding-left: 30px;
    padding-right: 30px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  .flex-1{
    flex: 1;
  }
  .home_besetsells_collection .info-title{
    font-family: "Roboto";
    font-size: 22px;
    font-weight: 600;
    line-height: 1.4;
    margin: 31px 0 15px;
    color: #262629;
  }
  .home_besetsells_collection .info-desc{
    font: 400 16px "Roboto";
    color: #76767F;
    line-height: 1.6;
  }
  .home_besetsells_collection .info-footer{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 24px 0 46px;
  }
  .home_besetsells_collection .info-footer .info-footer-price{
    font: 600 22px "Roboto";
    color: #262629;
  }
  .home_besetsells_collection .info-footer.info-footer-discount .info-footer-price {
    font: 500 18px "Roboto";
    color: #76767F;
    text-decoration: line-through;
  }
  .home_besetsells_collection .info-footer.info-footer-discount .discount-container {
    display: flex;
    align-items: center;
    /* align-items: flex-end; */
  }
  .home_besetsells_collection .info-footer .discount-price-info {
    font: 600 22px "Roboto";
    color: #262629;
    margin-right: 4px;
  }
  .home_besetsells_collection .info-footer .info-footer-button{
    background: linear-gradient(120deg, #014AE4, #9BEFFF);
    background-blend-mode: overlay;
    width: 120px;
    text-align: center;
    height: 40px;
    line-height: 40px;
    color: #fff;
    border-radius: 30px;
  }
  .home_besetsells_collection .swiper-pagination{
    bottom: 50px;
  }
  .home_besetsells_collection .swiper-pagination .swiper-pagination-bullet{
    width: 30px;
    height: 3px;
    display: inline-block;
    border-radius: 0;
    background: #EDEFF2;
    opacity: 1;
  }
  .home_besetsells_collection .swiper-pagination .swiper-pagination-bullet.swiper-pagination-bullet-active{
    background: #262629;
  }

  .home_besetsells_collection .btn{
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(186, 186, 186, 0.3);
    cursor: pointer;
    text-align: center;
    line-height: 48px;
    margin-right: 25px;
  }
  .home_besetsells_collection .btn.button-next svg {
    transform: rotate(180deg);
  }
  .home_besetsells_collection .btn svg {
    width: 12px;
    height: 12px;
    fill: none;
    stroke: none;
  }
  .home_besetsells_collection .btn:hover svg path{
    stroke: #429BFF;
  }
  .home_besetsells_collection .custom-pagination-container{ }
  .home_besetsells_collection .custom-pagination-container .pagina-btn{
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    cursor: pointer;
    background-color: rgba(255,255,255,0.9);
  }
  .home_besetsells_collection .custom-pagination-container .pagina-btn svg{
    width: 15px;
    height: 15px;
    fill: none;
    stroke: none;
  }
  .home_besetsells_collection .custom-pagination-container .pagina-btn:hover svg path{
    stroke: #014AE4;
  }
  .home_besetsells_collection .custom-pagination-container .pre-btn-icon{
    position: absolute;
    left: calc(16% + 10px);
    top: 42%;
    opacity: 0;
    transition: opacity .3s ease-in-out;
  }
  .home_besetsells_collection .custom-pagination-container .next-btn-icon{
    position: absolute;
    right: 10px;
    top: 40%;
    opacity: 0;
    transition: opacity .3s ease-in-out;
  }

  @media only screen and (max-width: 1024px){
    .home_besetsells_collection{
      padding: 72px 15px 32px;
    }
    .home_besetsells_collection .review-wrapper{
      padding-left: 0;
      padding-right: 0;
    }
    .home_besetsells_collection .review-title{
      margin-bottom: 0 !important;
    }
    .home_besetsells_collection .swiper-pagination .swiper-pagination-bullet {
      width: 40px;
    }
  }
  @media only screen and (max-width: 991px){
    .home_besetsells_collection{
      padding: 72px 10px 32px;
      padding-right: 0;
    }
    
    .home_besetsells_collection .review-title{
      font-size: 28px;
      line-height:1.28;
    }
  }
  /* IPhone */
  @media(max-width: 767px) {
    .home_besetsells_collection {
      padding-top: 50px;
      padding-bottom: 90px;
    }
    .home_besetsells_collection .review-list{
      margin-top: 25px;
    }
    .home_besetsells_collection .section-header {
      max-width: 100%;
    }
    .home_besetsells_collection .review-link {
      font-size: 14px;
    }
    .home_besetsells_collection .review-wrapper {
      width: 100%;
      margin-left: 0;
      padding-right: 20px;
      padding-left: 10px;
    }
    .home_besetsells_collection .review-title {
      font-size: 24px;
      max-width: 100%;
      margin-top: 0;
    }
    .home_besetsells_collection .swiper-pagination .swiper-pagination-bullet {
      width: 40px;
    }
    .home_besetsells_collection .review-title{
      font-size: 24px;
      line-height: 1.3;
    }
    .home_besetsells_collection .btn {
      margin-right: 9px;
    }
    .home_besetsells_collection .swiper-pagination {
      bottom: 48px;
    }
    .home_besetsells_collection .info-title{
      margin: 12px 0;
    }
    .home_besetsells_collection .info-footer{
      margin: 20px 0 30px;
    }
    .home_besetsells_collection .inner{
      border-radius: 20px;
    }
    .home_besetsells_collection .img-box,
    .home_besetsells_collection img {
      border-radius: 20px 20px 0 0;
    }
    .home_besetsells_collection .custom-pagination-container .pre-btn-icon{
      display: none;
    }
    .home_besetsells_collection .custom-pagination-container .next-btn-icon{
      display: none;
    }
  }
  /* IPad */
  @media(min-width: 768px) and (max-width: 1024px) {
    .home_besetsells_collection .review-wrapper{
      margin-left: 0;
    }
    .home_besetsells_collection .section-header{
      max-width: 100%;
    }
    .home_besetsells_collection{
      padding-bottom: 100px;
    }
    .home_besetsells_collection .custom-pagination-container .pre-btn-icon{
      left: 20px;
    }
    .home_besetsells_collection .custom-pagination-container .next-btn-icon{
      right: 20px;
    }
  }
  @media(min-width: 1025px) and (max-width: 1480px){
    .home_besetsells_collection .review-wrapper{
      margin-left: var(--margin-left-1);
    }
    .home_besetsells_collection .section-header{
      max-width: calc(100% - 120px);
    }
    .home_besetsells_collection .custom-pagination-container .pre-btn-icon{
      left: calc(var(--margin-left-1) + 10px);
    }
  }
</style>

<section class="home_besetsells_collection">
  <div class="container-full review-wrapper">
    {% if section.settings.title != blank or section.settings.sectionLabel != blank %}
      <div class="section-header">
        <h3 class="review-title">{{ section.settings.title }}</h3>
        <a class="review-link" role="link" {% if section.settings.blockLink != blank %}href="{{ section.settings.blockLink }}"{% else %} aria-disabled="true" {% endif %}>{{ section.settings.sectionLabel }}</a>
      </div>
    {% endif %}
    <div style="position: relative;">
      <div class="review-list swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="item swiper-slide">
              <a class="link-cont" role="link" {% if block.settings.prodLink != blank %}href="{{ block.settings.prodLink }}" {% else %} aria-disabled="true" {% endif %}>
                <div class="inner">
                  <div class="img-box image-zoom" padding-top: {% unless block.settings.avatar.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: block.settings.avatar.aspect_ratio | times: 120 }}%{% else %}{{ 1 | divided_by: block.settings.avatar.aspect_ratio | times: 100 }}%{% endunless %}">
                    <img src="{{ block.settings.avatar | img_url:'master' }}" loading="lazy">
                  </div>
                  <div class="info-box">
                    <h3 class="info-title">{{ block.settings.heading }}</h3>
                    <div class="info-desc">
                      <span>{{ block.settings.descripe }}</span>
                    </div>
                    <span class="flex-1"></span>
                    <div class="info-footer {% if block.settings.discount_price != blank %}info-footer-discount{% endif %}">
                      {% if block.settings.discount_price != blank %}<div class="discount-container">{% endif %}
                        {% if block.settings.discount_price != blank %}
                          <div class="discount-price-info">
                            <span class="info-fotter-price-unit">{{ block.settings.priceUnit }}</span>{{ block.settings.discount_price }}
                          </div>
                        {% endif %}
                        <div class="info-footer-price">
                          <span class="info-fotter-price-unit">{{ block.settings.priceUnit }}</span>{{ block.settings.price }}
                        </div>
                      {% if block.settings.discount_price != blank %}</div>{% endif %}
                      <a class="info-footer-button" role="link" {% if block.settings.prodLink != blank %}href="{{ block.settings.prodLink }}"{% else %}aria-disabled="true"{% endif %}>{{ block.settings.prodButton }}</a>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="swiper-pagination"></div>
  <!-- 自定义左右箭头 -->
  <div class="custom-pagination-container">
    <div class="pre-btn-icon pagina-btn">
      <svg width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M5.75 10.5L1.39145 6.14145C1.31335 6.06335 1.31335 5.93671 1.39145 5.85861L5.75 1.50006" stroke="#262629" stroke-width="1" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="next-btn-icon pagina-btn">
      <svg width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1 10.5L5.35855 6.14145C5.43665 6.06335 5.43665 5.93671 5.35855 5.85861L1 1.50006" stroke="#262629" stroke-width="1" stroke-linecap="round"/>
      </svg>
    </div>
  </div>
</section>

<script>
    // 判断鼠标hover到左半部分还是右半部分
    const reviewsList = document.querySelector('.home_besetsells_collection .review-list')
    const homeBesetsellsCollection = document.querySelector('.home_besetsells_collection')
    const prevBtn = document.querySelector('.home_besetsells_collection .custom-pagination-container .pre-btn-icon')
    const nextBtn = document.querySelector('.home_besetsells_collection .custom-pagination-container .next-btn-icon')
    reviewsList.addEventListener('mousemove', (e) => {
        const rect = reviewsList.getBoundingClientRect();
        const mid = rect.left + rect.width / 2;
      
        if (e.clientX < mid) {
          prevBtn.style.opacity = '1';
          nextBtn.style.opacity = '0';
        } else {
          prevBtn.style.opacity = '0';
          nextBtn.style.opacity = '1';
        }
    });
    homeBesetsellsCollection.addEventListener('mouseleave', function() {
        prevBtn.style.opacity = '0';
        nextBtn.style.opacity = '0';
    })
    
    let seller_swiper = new Swiper('.home_besetsells_collection .review-list',{
      loop: true,
      grabCursor : true,
      simulateTouch: true,
      slidesPerView : 1.4,
      spaceBetween : 16,
      pagination: {
        el: '.home_besetsells_collection .swiper-pagination',
        clickable :true,
      },
      breakpoints: { 
        320: {  //当屏幕宽度大于等于320
          slidesPerView: 1,
        },
        992: {  //当屏幕宽度大于等于768 
          slidesPerView: 2.4,
        },
        1400: {  //当屏幕宽度大于等于1280
          slidesPerView: 4,
        }
      }
    })
    // 上一页
    $('.custom-pagination-container .pre-btn-icon').click(function(){
      seller_swiper.slidePrev();
    })
    // 下一页
    $('.custom-pagination-container .next-btn-icon').click(function(){
      seller_swiper.slideNext();
    })
    
</script>

