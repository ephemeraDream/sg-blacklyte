<div id="{{ section.settings.sectionId }}">
  <section class="resource_container_section swiper">
    <div class="resource_container_module swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide">
            {%- if block.type == 'largeImage' -%}
              <div class="resource_container" id={{ block.settings.moduleID }}>
                <div class="container_image">
                    <a class="image image-adapt image_mb"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %}>
                        {%- assign height_imgmb = block.settings.ItemImageMb.width | divided_by: block.settings.ItemImageMb.aspect_ratio | round -%}
                        {{ block.settings.ItemImageMb | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'lazyload', height: height_imgmb, sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
                    </a>
                    <a class="image image-adapt image_pc"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %}>
                        {%- assign height_img = block.settings.ItemImage.width | divided_by: block.settings.ItemImage.aspect_ratio | round -%}
                        {{ block.settings.ItemImage | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'lazyload', height: height_img, sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
                    </a>
                </div>
                {%- if block.settings.ItemTitle != blank or block.settings.ItemDesc != blank -%}
                  <div class="container_content">
                    <div class="container_title">{{ block.settings.ItemTitle }}</div>
                    <div class="container_desc">{{ block.settings.ItemDesc }}</div>
                  </div>
                {%- endif -%}
              </div>
              <div class="recommend_container">
                <div class="recommend_container_title">{{ block.settings.recommendContainerTitle }}</div>
                <!-- atlas lite desk tabs -->
                {% if block.settings.isAtlasLiteDesk %}
                  {% render 'resource-cont-lite', block: block %}
                {% else %}
                  <div class="recommend_container_box">
                    <div class="container_sizes_box">
                      <div class="sizes_image">
                        {%- if block.settings.sizesImage != blank -%}
                          <a class="image image-adapt" role="link" aria-disabled="false">
                              {%- assign height_img = block.settings.sizesImage.width | divided_by: block.settings.sizesImage.aspect_ratio | round -%}
                              {{ block.settings.sizesImage | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'lazyload', height: height_img, sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
                          </a>
                        {%- endif -%}
                      </div>
                      <div class="sizes_container">
                        <div class="sizes_container_box1">
                          <div class="size_title">{{ block.settings.RecommendedSizeTitle }}</div>
                          {%- if block.settings.RecommendedSizeHTML != blank -%}
                              <div>{{ block.settings.RecommendedSizeHTML }}</div>
                            {%- else -%}
                              <div class="size_desc1 size_desc">{{ block.settings.RecommendedSizeDesc1 }}</div>
                              <div class="size_desc2 size_desc">{{ block.settings.RecommendedSizeDesc2 }}</div>
                          {%- endif -%}
                        </div>
                        <div class="container_center_line"></div>
                        <div class="sizes_container_box2">
                          <div class="size_title">{{ block.settings.RecommendedComponentTitle }}</div>
                            {%- if block.settings.RecommendedComponentHTML != blank -%}
                              <div>{{ block.settings.RecommendedComponentHTML }}</div>
                            {%- else -%}
                              {%- if block.settings.HeadrestValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Head Pillow :</span>
                                  <span class="component_value">{{ block.settings.HeadrestValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.WaistAdjustmentValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Lumbar Support :</span>
                                  <span class="component_value">{{ block.settings.WaistAdjustmentValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.SkeletonValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Frame Construction :</span>
                                  <span class="component_value">{{ block.settings.SkeletonValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.HandrailValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Armrests :</span>
                                  <span class="component_value">{{ block.settings.HandrailValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.TrayValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Tilt Mechanism :</span>
                                  <span class="component_value">{{ block.settings.TrayValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.AirBarValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Hydraulic Gas Piston :</span>
                                  <span class="component_value">{{ block.settings.AirBarValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.FiveStarFeetValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Wheelbase :</span>
                                  <span class="component_value">{{ block.settings.FiveStarFeetValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.ContactRollerValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Caster :</span>
                                  <span class="component_value">{{ block.settings.ContactRollerValue }}</span>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.AngleAdjustmentValue != blank -%}
                                <div class="component_items component_headrest">
                                  <span class="component_key">Reclining Angle :</span>
                                  <span class="component_value">{{ block.settings.AngleAdjustmentValue }}</span>
                                </div>
                              {%- endif -%}
                            {%- endif -%}
                        </div>
                        <div class="container_center_line"></div>
                        <!-- ElectricalSpecifications for Atlas Desk -->
                        {%- if block.settings.ElectricalSpecificationsTitle != blank -%}
                          <div class="Specification_container_box4">
                            <div class="size_title">{{ block.settings.ElectricalSpecificationsTitle }}</div>
                            {%- if block.settings.DeskInputVoltage != blank -%}
                              <div class="component_items component_headrest">
                                <span class="component_key">Desk Input Voltage:</span>
                                <span class="component_value">{{ block.settings.DeskInputVoltage }}</span>
                              </div>
                            {%- endif -%}
                            {%- if block.settings.NumberOfMotors != blank -%}
                              <div class="component_items component_headrest">
                                <span class="component_key">Number of Motors:</span>
                                <span class="component_value">{{ block.settings.NumberOfMotors }}</span>
                              </div>
                            {%- endif -%}
                          </div>
                          <div class="container_center_line"></div>
                        {%- endif -%}
                        <div class="sizes_container_box3 {% if block.settings.ElectricalSpecificationsTitle != blank %}sizes_container_box3_desk{% endif %}">
                          <div class="size_title">{{ block.settings.PackagingTitle }}</div>
                          {%- if block.settings.PackageSizeValue != blank -%}
                            <div class="component_items component_headrest">
                              <span class="component_key">Package size :</span>
                              <span class="component_value">{{ block.settings.PackageSizeValue }}</span>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.NetWeightValue != blank -%}
                            <div class="component_items component_headrest">
                              <span class="component_key">Net weight :</span>
                              <span class="component_value">{{ block.settings.NetWeightValue }}</span>
                            </div>
                          {%- endif -%}
                        {% if block.settings.isAtlasLiteDesk %}
                          <div class="container_center_line"></div>
                        {% endif %}
                          {%- if block.settings.GrossWeightValue != blank -%}
                            <div class="component_items component_headrest">
                              <span class="component_key {% if block.settings.isAtlasLiteDesk %}component_key_blod{% endif %}">Gross weight :</span>
                              <span class="component_value">{{ block.settings.GrossWeightValue }}</span>
                            </div>
                          {%- endif -%}
                        </div>
                        <div class="container_center_line"></div>
