<script>
  window.resourceSwiper = new Swiper('.resource_container_section', {
    grabCursor : true,
    loop: false,
    slidesPerView: 1,
    autoHeight: true,
    on: {
        slideChange: function (e) {
          const index = e.snapIndex
          slideBox(index)
        }
    }
  })

  function slideBox (index) {
    if(`${index}` === '5') {
      $('.resources_video_usermanual .resources_usermanual.driver_download_box').css('display', 'flex')
    } else {
      $('.resources_video_usermanual .resources_usermanual.driver_download_box').css('display', 'none')
    }
    if(window.innerWidth >= 768) {
      // 移除所有 .item 的 item_active 类
      $('.resources_module .resources_products .item').removeClass('item_active');

      // 根据 index 给对应的 .item 添加 item_active 类
      $('.resources_module .resources_products .item').eq(index).addClass('item_active');
    } else {
      $('.resources_module .resources_products .items_mobile .items_mobile_item').removeClass('items_mobile_item_active');
      $('.resources_module .resources_products .items_mobile .items_mobile_item').eq(index).addClass('items_mobile_item_active');
      const currentText = $('.resources_module .resources_products .items_mobile .items_mobile_item').eq(index).text()
      if(currentText) {
        $('.resources_module .resources_products .item:nth-of-type(1) .item_title .item_title_text').text(currentText)
      }
    }
  }

  $('.resources_video_usermanual .play_button').on('click', function(){
    // 获取当前点击 .item 的 data-url 值
    var dataUrl = $(this).data('url')
    if(dataUrl) {
      window.open(dataUrl)
    }
  })
</script>      

