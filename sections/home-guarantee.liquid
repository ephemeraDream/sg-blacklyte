<style>
  .blavklyte-guarantees{
    background: #F8F9FC;
  }
  .blavklyte-guarantees img{
    width: 100%;
    object-fit: contain;
    height: auto;
  }

  .blavklyte-guarantees .guarantee-wrapper{
    padding: 71px 0;
  }
  .blavklyte-guarantees .guarantee-wrapper .icon-list{
    display: flex;
    gap:10px;
  }
  .blavklyte-guarantees .guarantee-wrapper .icon-list .item{
    width: calc( 100% / 3 );
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position: relative;
  }
  .blavklyte-guarantees .guarantee-wrapper .icon-list .item .info {
    flex: 1;
  }
  .blavklyte-guarantees .guarantee-wrapper .icon-list .icon-img{
    max-width: 64px;
    height: 64px;
    margin-right: 30px;
  }
  .blavklyte-guarantees .info-title{
    font: 500 22px "Roboto";
    line-height: 1.5;
    text-transform: uppercase;
    margin-bottom: 4px;
    margin-top: 18px;
    color: #262629;
  }
  .blavklyte-guarantees .info-text{
    font: 400 16px "Roboto";
    line-height: 1.4;
    color: #76767F;
    margin-top: 0;
  }
  @media(max-width: 767px) {
    .blavklyte-guarantees .guarantee-wrapper .icon-list .item{
      width: 100%;
    }
    .blavklyte-guarantees .guarantee-wrapper .icon-list .icon-img {
        max-width: 50px;
        height: 50px;
        margin-right: 15px;
    }
    .blavklyte-guarantees {
      padding-top: 50px;
      padding-bottom: 50px;
    }
    .blavklyte-guarantees div.guarantee-wrapper {
      padding: 0 10px;
    }
    .blavklyte-guarantees .info-title {
      margin-top: 8px;
      font-size: 18px;
    }
    .blavklyte-guarantees .info-text{
      font-size: 14px;
    }
    .blavklyte-guarantees .icon-list .item:first-child .info-text {
      line-height: 21px;
    }
    
  }
  @media (min-width: 2000px) {
    .blavklyte-guarantees .guarantee-wrapper .icon-list .icon-img {
        max-width: 3.33vw;
        height: 3.33vw;
    }
    .blavklyte-guarantees .info-title{
          font-size: 0.84vw;
    }
    .blavklyte-guarantees .info-text{
      font-size:0.84vw;
    }
  }
  @media only screen and (max-width: 1265px){
    .blavklyte-guarantees{
      padding: 128px 30px 128px;
    }
  }
  @media only screen and (max-width: 1024px){
    .blavklyte-guarantees{
      padding: 72px 15px 72px;
    }
    .blavklyte-guarantees .guarantee-wrapper{
      padding: 32px 40px;
    }
  }
  @media only screen and (max-width: 991px){
    .blavklyte-guarantees{
      padding: 72px 10px 72px;
    }
    .blavklyte-guarantees .guarantee-wrapper .icon-list{
      flex-direction: column;
      align-items: center;
      gap: 30px;
    }
    .blavklyte-guarantees .guarantee-wrapper .icon-list .item{
      width: 100%;
    }
  }
</style>

<section class="blavklyte-guarantees">
  <div class="container-1570 guarantee-wrapper">
    {% if section.settings.title != blank %}
      <!-- <h3 class="guarantee-title">{{ section.settings.title }}</h3> -->
    {% endif %}
    <div class="icon-list">
      {% for block in section.blocks %}
        <div class="item">
          <div class="icon-img">
            {% if block.settings.icon != blank %}
              {{-
                block.settings.icon
                | image_url: width: block.settings.icon.width
                | image_tag:
                  is: 'loess-image',
                  loading: 'lazy',
                  sizes: '100vw',
                  widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
                  class: ''
              -}}
            {% else %}
              <img src="" loading="lazy">
            {% endif %}
          </div>
      
          <div class="info">
              {% if block.settings.title != blank %}
                <h2 class="info-title">{{ block.settings.title }}</h2>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="info-text">{{ block.settings.text }}</p>
              {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Guarantee",
  "max_blocks": 3,
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Section title",
      "default": "Our Guarantee"
    }
  ],
  "blocks": [
    {
      "type": "blcok",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        }, 
        {
          "type": "textarea",
          "id": "title",
          "label": "Icon title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Icon text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Guarantee"
    }
  ]
}
{% endschema %}
