<style>
  .blacklyte-swiper-{{ section.id }}{
    background: #000000;
    padding: {{section.settings.pt_pc}}px 0 {{section.settings.pb_pc}}px;
  }
  .hide-pc{
    display: none!important;
  }
  .hide-mb{
    display: block!important;
  }
  .blacklyte-swiper .swiper-title{
    margin: 0;
    color: #fff;
    font-size: 40px;
    font-weight: 700;
    line-height: 1.2;
    text-align: left;
  }
  .blacklyte-swiper .swiper-text{
    margin: 0;
    color: #f2f2f2;
    font-size: 20px;
    font-weight: 400;
    line-height: 1.4;
    max-width: 585px;
  }
  .blacklyte-swiper .title-box{
    display: flex;
    justify-content: space-between;
    margin-bottom: 48px;
  }
  .blacklyte-swiper .item-wrapper{
    margin: 35px;
  }
  .blacklyte-swiper .slick-slide{
    transition: all 300ms ease;
  }
  .blacklyte-swiper .slick-slide:not(.slick-center) {
    transform: scale(0.9);
  }
    .blacklyte-swiper .slick-dots li button{
        --dots-width: 24px;
        --dots-height: 4px;
        --dots-color: #ffffff;
        border-radius: 4px;
        opacity: .2;
        border: none;
  }
  .blacklyte-swiper .slick-dots li.slick-active button{
    opacity: 1;
    background: #ffffff;
  }
  .blacklyte-swiper .slick-arrow{
    background: none!important;
    border: none!important;
  }
  .blacklyte-swiper .slick-arrow.prev{
    left: 230px;
  }
  .blacklyte-swiper .slick-arrow.next{
    right: 230px;
  }
  .blacklyte-swiper .slick-arrow:hover{
    border-color: none;
    background: none;
  }
  .blacklyte-swiper .img-box{
    border-radius: 16px;
    overflow: hidden;
  }
  @media only screen and (min-width: 2000px){
    .blacklyte-swiper .swiper-title{
      font-size: 2.08vw;
    }
    .blacklyte-swiper .swiper-text{
      font-size: 1.04vw;
      max-width: 32vw;
    }
    .blacklyte-swiper .img-box{
      border-radius: 1vw;
    }
    .blacklyte-swiper .slick-arrow{
      width: 3vw;
      height: 3vw;
    }
    .blacklyte-swiper .slick-arrow svg{
      width: 100%;
      height: 100%;
    }
    .blacklyte-swiper .slick-dots li button{
      width: 2vw;
      height: 0.3vw;
    }
    .blacklyte-swiper .slick-arrow.prev{
      left: 12vw;
    }
    .blacklyte-swiper .slick-arrow.next{
      right: 12vw;
    }
  }
  @media only screen and (max-width: 1500px){
    .blacklyte-swiper .slick-arrow.prev{
      left: 80px;
    }
    .blacklyte-swiper .slick-arrow.next{
      right: 80px;
    }
  }
  @media only screen and (max-width: 1200px){
    .blacklyte-swiper .item-wrapper{
      margin: 10px;
    }
  }
  @media only screen and (max-width: 991px){
    .blacklyte-swiper-{{ section.id }}{
      background: #000000;
      padding: {{section.settings.pt_m}}px 0 {{section.settings.pb_m}}px;
    }
    .blacklyte-swiper .title-box{
      flex-direction: column;
      align-items: center;
      gap: 8px;
      margin-bottom: 18px;
    }
    .blacklyte-swiper .swiper-title{
      font-size: 28px;
      line-height: 1.28;
    }
    .blacklyte-swiper .swiper-text{
      font-size: 16px;
      max-width: 100%;
      text-align: center;
    }
  }
  @media only screen and (max-width: 768px){
   .blacklyte-swiper .item-wrapper{
      margin: 0px;
    }
  }
  @media only screen and (max-width: 550px){
    .hide-pc{
      display: block!important;
    }
    .hide-mb{
      display: none!important;
    }
    .blacklyte-swiper .img-box{
      border-radius: 8px;
    }
  }
</style>

{%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.styles_max_width }}px, 100vw){% endif %}{%- endcapture -%}
<section class="blacklyte-swiper blacklyte-swiper-{{ section.id }}">
    <div class="title-box container-1570">
      {% if section.settings.title != blank %}
        <h3 class="swiper-title scroll-trigger animate--slide-in">{{ section.settings.title }}</h3>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="swiper-text scroll-trigger animate--slide-in">{{ section.settings.text }}</p>
      {% endif %}
    </div>
    
    <div class="swiper-wrapper scroll-trigger animate--slide-in">
      <div class="swiper-inner custom_carousel">
          {% for block in section.blocks %}
                <div class="item-wrapper">
                  <div class="item">
                    <div class="img-box">
                      {{- block.settings.img | image_url: width: block.settings.img.width | image_tag: is: 'loess-image', loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'hide-mb' -}}
                      {{- block.settings.img_m | image_url: width: block.settings.img_m.width | image_tag: is: 'loess-image', loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'hide-pc' -}}
                    </div>
                  </div>
                </div>
          {% endfor %}
      </div>
    </div>
</section>
