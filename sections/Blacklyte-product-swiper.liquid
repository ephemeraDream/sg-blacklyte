{% schema %}
{
  "name": "Blacklyte Product Swiper",
  "settings": [
    {
      "type" : "textarea",
      "id" : "title",
      "label" : "Title",
      "default" : "MORE DETAILS"
    },
    {
      "type" : "textarea",
      "id" : "text",
      "label" : "Text",
      "default" : "Athena Chair embodies our vision of redefining work and play setups through immersive entertainment solutions. It seamlessly blends innovation and comfort to enhance any environment"
    },
    {
      "type": "range",
      "id": "pt_pc",
      "min": 0,
      "max": 128,
      "step": 2,
      "unit": "px",
      "label": "Padding top PC",
      "default": 128
    },
    {
      "type": "range",
      "id": "pb_pc",
      "min": 0,
      "max": 128,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom PC",
      "default": 128
    },
    {
      "type": "range",
      "id": "pt_m",
      "min": 0,
      "max": 128,
      "step": 2,
      "unit": "px",
      "label": "Padding top MOBILE",
      "default": 78
    },
    {
      "type": "range",
      "id": "pb_m",
      "min": 0,
      "max": 128,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom MOBILE",
      "default": 78
    }
  ],
  "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
          {
              "type" : "image_picker",
              "id" : "img",
              "label" : "Image PC"
          },
          {
              "type" : "image_picker",
              "id" : "img_m",
              "label" : "Image Mobile"
          }
        ]
      }
  ],
  "presets": [
    {
      "name": "Blacklyte Product Swiper"
    }
  ]
}
{% endschema %}
