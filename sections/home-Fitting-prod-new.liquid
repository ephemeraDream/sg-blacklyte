{% comment %}
  3.0 修改版展示椅子和桌子模块.
  分为1 1 上0.5 下0.5 的布局
  Athena x下架后变为1 1 1的布局
{% endcomment %}
<style>
  .fitting-module{
    padding-top: 100px;
    padding-bottom: 100px;
    background-color: #f5f5f5;
  }
  .fitting-module .container-1570{
    max-width: 68%;
  }
  .fitting-module .module-title{
    font: 600 40px "Roboto";
    line-height: 1.4;
    color: #272727;
    text-align: center;
  }
  .fitting-module .module-descripe{
    font: 400 16px "Roboto";
    line-height: 1.4;
    color: #272727;
    margin-top: 7px;
    text-align: center;
  }
  .fitting-module .module-content{
    display: flex;
    margin-top: 57px;
    gap: 26px;
  }
  .fitting-module .module-content .large-item{
    flex: 0 0 calc((100% - 52px) / 3);
    background-color: #fff;
    border-radius: 24px;
    padding: 30px;
    cursor: pointer;
  }
  .fitting-module .module-content .large-item .item-title{
    font: 600 22px "Roboto";
    line-height: 1.4;
    color: #262629;
  }
  .fitting-module .module-content .large-item .item-desc{
    font: 400 16px "Roboto";
    color: #76767F;
    margin-bottom: 12px;
  }
  .fitting-module .module-content .large-item .item-icon{
    width: 40px;
    height: 26px;
    border: 1px solid #5D5D5E;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }
  .fitting-module .module-content .large-item .item-icon svg{
    fill: none;
    stroke: none;
    width: 12px;
    height: 12px;
  }
  .fitting-module .module-content .large-item .item-icon:hover {
    border-color: #429BFF;
  }
  .fitting-module .module-content .large-item .item-icon:hover svg path{
    stroke: #429BFF;
  }
  .fitting-module .module-content .large-item .item-image{
    height: auto;
    margin-top: 18px;
  }
  .fitting-module .module-content .large-item.small-item{
    display: flex;
    justify-content: space-between;
    padding: 30px 0 0 30px;
    height: calc((100% - 22px) / 2);
  }
  
  .fitting-module .module-content .small-image-cont{
    display: flex;
    flex-direction: column;
    gap: 22px;
    flex: calc((100% - 52px) / 3);
  }
  .fitting-module .module-content .large-item.small-item .large-item-small-left{
    /* width: calc(100% - 200px); */
    width: 50%;
  }
  .fitting-module .module-content .large-item.small-item .small-item-img{
    /* width: 200px; */
    width: 50%;
  }
  .fitting-module .module-content .large-item.small-item .item-image{
    margin-top: 0;
  }
  
  
  /* IPhone */
  @media(max-width: 767px){
    .fitting-module .container-1570{
      max-width: 100%;
      padding-left: 20px;
      padding-right: 20px;
    }
    .fitting-module{
      padding-top: 50px;
      padding-bottom: 50px;
    }
    .fitting-module .module-title{
      font-size: 24px;
    }
    .fitting-module .module-descripe{
      font-size: 16px;
    }
    .fitting-module .module-content{
      flex-wrap: wrap;
      margin-top: 28px;
    }
    .fitting-module .module-content .large-item{
      padding: 40px 20px 44px 20px;
      border-radius: 20px;
    }
    .fitting-module .module-content .large-item.small-item{
      padding: 40px 0 0 20px;
      border-radius: 20px;
    }
    .fitting-module .module-content .large-item{
      flex: auto;
    }
  }
  /* IPad */
  @media(min-width: 768px) and (max-width: 1024px){
    .fitting-module .container-1570{
      max-width: 100%;
    }
    .fitting-module .module-content,
    .fitting-module .module-content .small-image-cont {
      gap: 10px;
    }
    .fitting-module .module-content .large-item.small-item{
      height: calc((100% - 10px) / 2);
    }
    .fitting-module .module-content .large-item .item-title{
      font-size: 12px;
    }
    .fitting-module .module-content .large-item .item-desc{
      font-size: 10px;
    }
    .fitting-module .module-content .large-item .item-icon{
      width: 26px;
      height: 18px;
    }
    .fitting-module .module-content .large-item .item-icon svg{
      width: 6px;
      height: 6px;
    }
  }
  /* small screen */
  @media(min-width: 1025px) and (max-width: 1900px){
    .fitting-module .module-content{
      gap: 20px;
    }
    .fitting-module .module-content .large-item .item-title{
      font-size: 18px;
    }
    .fitting-module .module-content .large-item .item-desc{
      font-size: 14px;
    }
    .fitting-module .module-content .large-item .item-icon{
      width: 30px;
      height: 20px;
    }
    .fitting-module .module-content .large-item .item-icon svg{
      width: 8px;
      height: 8px;
    }
  }
  @media(min-width: 1025px) and (max-width: 1480px){
    .fitting-module .container-1570{
      max-width: calc(100% - var(--margin-left-1) * 2);
      padding-left: 0;
      padding-right: 0;
    }
  }
  /* large screen */
  @media(min-width: 2000px){ }
  
</style>
<section class="fitting-module">
  <div class="container-1570">
    <div class="module-title">{{ section.settings.section-title }}</div>
    <div class="module-descripe">{{ section.settings.section-desc }}</div>
    <div class="module-content">
      {% for block in section.blocks %}
        {% if block.type == 'largeImage' %}
            <a class="large-item image-zoom" role="link" {% if block.settings.large_item_link != blank %} href="{{ block.settings.large_item_link }}" {% else %} aria-disabled="true" {% endif %}>
              <div class="item-title">{{ block.settings.large_item_title }}</div>
              <div class="item-desc">{{ block.settings.large_item_desc }}</div>
              {% if block.settings.large_item_title != blank or block.settings.large_item_desc != blank %}
                <div class="item-icon">
                  <svg width="8" height="12" viewBox="0 0 8 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L5.90698 5.90698L1 10.814" stroke="#5D5D5E" stroke-width="1.6"/>
                  </svg>
                </div>
              {% endif %}
              {% if block.settings.large_item_avator != blank %}
                {%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.styles_max_width }}px, 100vw){% endif %}{%- endcapture -%}
                {{- block.settings.large_item_avator | image_url: width: block.settings.large_item_avator.width | image_tag: is: 'loess-image', loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'item-image' -}}
              {% endif %}
            </a>
        {% endif %}
      {% endfor %}
      <div class="small-image-cont">
        {% for block in section.blocks %}
          {% if block.type == 'smallImage' %}
            <a class="large-item small-item" role="link" {% if block.settings.small_item_link != blank %} href="{{ block.settings.small_item_link }}" {% else %} aria-disabled="true" {% endif %}>
              <div class="large-item-small-left">
                <div class="item-title">{{ block.settings.small_item_title }}</div>
                <div class="item-desc">{{ block.settings.small_item_desc }}</div>
                {% if block.settings.small_item_title != blank or block.settings.small_item_desc != blank %}
                  <div class="item-icon">
                    <svg width="8" height="12" viewBox="0 0 8 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M1 1L5.90698 5.90698L1 10.814" stroke="#5D5D5E" stroke-width="1.6"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
              <div class="small-item-img image-zoom">
                {% if block.settings.small_item_avator != blank %}
                  {%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.styles_max_width }}px, 100vw){% endif %}{%- endcapture -%}
                  {{- block.settings.small_item_avator | image_url: width: block.settings.small_item_avator.width | image_tag: is: 'loess-image', loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'item-image' -}}
                {% endif %}
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "HOME Fitting Prod NEW",
    "settings": [
      {
        "type": "text",
        "id": "section-title",
        "label": "Section TITLE",
        "default": "Fitting You Like No Other"
      },
      {
        "type": "textarea",
        "id": "section-desc",
        "label": "Section Descripe",
        "default": "Find the best comfort to match your energy and style"
      }
    ],
    "blocks": [
      {
        "type": "largeImage",
        "name": "largeImage",
        "settings": [
          {
            "type": "image_picker",
            "id": "large_item_avator",
            "label": "Large Item Avator"
          },
          {
            "type": "text",
            "id": "large_item_title",
            "label": "Large Item Title",
          },
          {
            "type": "text",
            "id": "large_item_desc",
            "label": "Large Item Descripe"
          },
          {
            "type": "url",
            "id": "large_item_link",
            "label": "Large Item LINK"
          }
        ]
      },
      {
        "type": "smallImage",
        "name": "smallImage",
        "settings": [
          {
            "type": "image_picker",
            "id": "small_item_avator",
            "label": "Small Item Avator"
          },
          {
            "type": "text",
            "id": "small_item_title",
            "label": "Small Item Title"
          },
          {
            "type": "text",
            "id": "small_item_desc",
            "label": "Small Item Descripe"
          },
          {
            "type": "url",
            "id": "small_item_link",
            "label": "Small Item LINK"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "HOME Fitting Prod NEW"
      }
    ]
  }
{% endschema %}