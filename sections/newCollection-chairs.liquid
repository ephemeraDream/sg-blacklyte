<style>
  .new_collection_chairs_section {
    background-color: #D9D9D9;
    padding-bottom: 88px;
  }
  .new_collection_chairs_module {
    padding-left: 60px;
    padding-right: 60px;
    position: relative;
  }
  .new_collection_chairs_module_header {
    padding-top: 42px;
    padding-bottom: 40px;
  }
  .new_collection_chairs_module_header .title {
    /* font-family: "Orbitron"; */
    font-weight: 500;
    color: #18181B;
    font-size: 30px;
  }
  .new_collection_chairs_module_header .descripe {
    /* font-family: "Poppins"; */
    font-weight: 400;
    font-size: 22px;
    line-height: 40px;
    color: #666666;
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
  }
  .new_collection_chairs_module_header .view_all_icon {
    font-size: 22px;
    line-height: 40px;
    font-weight: 400;
    color: #333333;
    text-decoration-line: underline;
    cursor: pointer;
  }
  .new_collection_chairs_module .btn {
    z-index: 10;
  }
  .new_collection_chairs_module .btn.button-prev {
    position: absolute;
    top: 50%;
    left: 60px;
    transform: translateY(calc(-50% + 50px));
  }
  .new_collection_chairs_module .btn svg {
    width: 60px;
    height: 60px;
    fill: none;
    stroke: none;
    cursor: pointer;
    border-radius: 50%;
  }
  .new_collection_chairs_module .btn.button-next {
    position: absolute;
    right: 60px;
    top: 50%;
    transform: translateY(calc(-50% + 50px));
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  .new_collection_chairs_module .btn.button-prev.button-prev-opacity-0,
  .new_collection_chairs_module .btn.button-next.button-next-opacity-0 {
    opacity: 0;
  }
  .new_collection_chairs_module .btn.button-prev.button-prev-opacity-1,
  .new_collection_chairs_module .btn.button-next.button-next-opacity-1 {
    opacity: 1;
  }
  
  .new_collection_chairs_container .chair_item {
    position: relative;
  }
  .new_collection_chairs_container .chair_item .image {
    border-radius: 2px;
  }
  .new_collection_chairs_container .chair_item:nth-of-type(1) {
    width: calc(390px * 2.566) !important;
  }
  .new_collection_chairs_container .chair_item:not(:first-of-type) {
    width: 390px !important;
  }
  .new_collection_chairs_container .chair_item .chair_item_container {
    position: absolute;
    bottom: 30px;
    left: 36px;
  }
  .new_collection_chairs_container .chair_item .item_title {
    font-size: 30px;
    line-height: 50px;
    /* font-family: "Poppins"; */
    font-weight: 500;
    color: #fff;
  }
  .new_collection_chairs_container .chair_item .item_desc {
    /* font-family: "Poppins"; */
    font-size: 22px;
    line-height: 30px;
    color: #fff;
    font-weight: 400;
  }
  .new_collection_chairs_container .chair_item .hide-mb {
    display: block;
  }
  .new_collection_chairs_container .chair_item .hide-pc {
    display: none;
  }
  .new_collection_chairs_module .view_all_mb {
    display: none;
  }

  /* 2000px 以上 */
  @media(min-width: 2000px) {
    .new_collection_chairs_container .chair_item:nth-of-type(1) {
        width: calc(460px* 2.7888) !important;
    }
    .new_collection_chairs_container .chair_item:not(:first-of-type) {
        width: 500px !important;
    }
  }

  /* 1500px ~ 1900px */
  @media(min-width: 1025px) and (max-width: 1900px) {
    .new_collection_chairs_container .chair_item:nth-of-type(1) {
        width: calc(340px* 2.566) !important;
    }
    .new_collection_chairs_container .chair_item:not(:first-of-type) {
        width: 340px !important;
    }
    .new_collection_chairs_container .chair_item .chair_item_container {
      left: 10px;
      bottom: 20px;
    }
    .new_collection_chairs_container .chair_item .item_title {
      font-size: 20px;
      line-height: 30px;
    }
    .new_collection_chairs_container .chair_item .item_desc {
      font-size: 14px;
      line-height: 16px;
    }
  }

  /* iPad */
  @media(min-width: 768px) and (max-width: 1024px) {
    .new_collection_chairs_container .chair_item .chair_item_container {
      bottom: 30px;
      left: 10px;
    }
    .new_collection_chairs_container .chair_item .item_title {
        font-size: 16px;
        line-height: 20px;
        margin-bottom: 6px;
    }
    .new_collection_chairs_container .chair_item .item_desc {
        font-size: 12px;
        line-height: 14px;
    }
    .new_collection_chairs_module .btn svg {
      width: 20px;
      height: 20px;
      fill: none;
      stroke: none;
      background-color: rgba(255, 255, 255, 0.6);
    }
    .new_collection_chairs_module .btn.button-prev {
      position: absolute;
      top: 50%;
      left: 70px;
      transform: translateY(50px);
      z-index: 10;
      border-radius: 50%;
      cursor: pointer;
    }
    .new_collection_chairs_module .btn.button-next {
      position: absolute;
      right: 70px;
      top: 50%;
      transform: translateY(50px);
      z-index: 10;
      border-radius: 50%;
      cursor: pointer;
    }
  }

  /* iPhone */
  @media(max-width: 767px) {
    .new_collection_chairs_container .chair_item .hide-mb {
      display: none;
    }
    .new_collection_chairs_container .chair_item .hide-pc {
      display: block;
    }
    .new_collection_chairs_container {
      padding-right: 20px;
    }
    
    .new_collection_chairs_module {
      padding-left: 20px;
      padding-right: 0px;
    }
    .new_collection_chairs_module_header {
      padding-bottom: 20px;
    }
    .new_collection_chairs_module_header .title {
      font-size: 24px;
    }
    .new_collection_chairs_module_header .view_all_icon {
      display: none;
    }
    .new_collection_chairs_module_header .descripe {
      font-size: 14px;
      line-height: 20px;
    }
    .new_collection_chairs_container .chair_item:nth-of-type(1),
    .new_collection_chairs_container .chair_item:not(:first-of-type) {
      width: 300px !important;
    }

    .new_collection_chairs_module .btn svg {
      width: 20px;
      height: 20px;
      fill: none;
      stroke: none;
      background-color: rgba(0, 0, 0, 1);
    }
    .new_collection_chairs_module .btn.button-prev {
      position: absolute;
      top: 50%;
      left: 25px;
      transform: translateY(40px);
      z-index: 10;
      border-radius: 50%;
    }
    .new_collection_chairs_module .btn.button-next {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(40px);
      z-index: 10;
      border-radius: 50%;
    }
    .new_collection_chairs_container .chair_item .item_title {
      font-size: 20px;
      line-height: 30px;
    }
    .new_collection_chairs_container .chair_item .item_desc {
      font-size: 14px;
      line-height: 18px;
    }
    .new_collection_chairs_module .view_all_mb {
      display: block;
      margin-top: 28px;
    }
    .new_collection_chairs_module .view_all_mb .view_all_icon {
      /* font-family: "Poppins"; */
      color: #333333;
      font-size: 14px;
      font-weight: 400;
      text-decoration-line: underline;
      cursor: pointer;
    }
    .new_collection_chairs_container .chair_item .chair_item_container {
      position: absolute;
      bottom: 20px;
      left: 10px;
    }
    
  }
  
</style>

<section class="new_collection_chairs_section" id="gamingchairs">
  <div class="container-full new_collection_chairs_module">
    <div class="new_collection_chairs_module_header">
      <div class="title">{{ section.settings.title }}</div>
      <div class="descripe">
        <span>{{ section.settings.descripe }}</span>
        <a href="{% if section.settings.view_all_link != blank %}{{ section.settings.view_all_link }}{% else %}javascripe:void(0);{% endif %}" class="view_all_icon">
          {{ section.settings.view_all_chairs }}
        </a>
      </div>
    </div>
    <div class="new_collection_chairs_container swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="chair_item swiper-slide">
            {% if block.settings.ItemImage != blank %}
              <a class="hide-mb image image-adapt image-zoom{% if block.settings.ItemImage != 'fixed' %} adaptive_height{% endif %}"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %} style="padding-top: {% unless block.settings.ItemImage.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: block.settings.ItemImage.aspect_ratio | times: 110 | append: '%' }}{% else %}{{ 1 | divided_by: block.settings.ItemImage.aspect_ratio | times: 100 | append: '%' }}{% endunless %}">
                  {{ block.settings.ItemImage | image_url: width: 3840 | image_tag: loading: 'lazy', class: lazy, height: block.settings.ItemImage.height, sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
                  {%- if settings.enable_lazyload -%}<span class="data-lazy-loading"></span>{%- endif -%}
              </a>
            {% endif %}
            {% if block.settings.ItemImageMb != blank %}
              <a class="hide-pc image image-adapt image-zoom{% if block.settings.ItemImageMb != 'fixed' %} adaptive_height{% endif %}"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %} style="padding-top: {% unless block.settings.ItemImageMb.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: block.settings.ItemImageMb.aspect_ratio | times: 110 | append: '%' }}{% else %}{{ 1 | divided_by: block.settings.ItemImageMb.aspect_ratio | times: 100 | append: '%' }}{% endunless %}">
                  {{ block.settings.ItemImageMb | image_url: width: 3840 | image_tag: loading: 'lazy', class: lazy, height: block.settings.ItemImageMb.height, sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
                  {%- if settings.enable_lazyload -%}<span class="data-lazy-loading"></span>{%- endif -%}
              </a>
            {% endif %}
            {% if block.settings.ItemTitle != blank or block.settings.ItemDescripe != blank %}
              <a {% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %} class="chair_item_container">
            {% endif %}
              {% if block.settings.ItemTitle != blank %}
                <div class="item_title">{{ block.settings.ItemTitle }}</div>
              {% endif %}
              {% if block.settings.ItemDescripe != blank %}
                <div class="item_desc">{{ block.settings.ItemDescripe }}</div>
              {% endif %}
            {% if block.settings.ItemTitle != blank or block.settings.ItemDescripe != blank %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="btn button-prev button-prev-opacity-0">
      <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M38 10L18 30L38 50" stroke="#B5B5B5" stroke-width="3"/>
      </svg>
    </div>
    <div class="btn button-next button-next-opacity-0">
      <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M22 50L42 30L22 10" stroke="#B5B5B5" stroke-width="3"/>
      </svg>
    </div>
    <div class="view_all_mb">
      <a href="{% if section.settings.view_all_link != blank %}{{ section.settings.view_all_link }}{% else %}javascripe:void(0);{% endif %}" class="view_all_icon">
          {{ section.settings.view_all_chairs }}
      </a>
    </div>
  </div>
</section>

<script src="https://cdn.shopify.com/s/files/1/0663/6742/2695/files/swiper-bundle.min.js?v=1702624149"></script>

<script>
    let reviews_swipers = new Swiper('.new_collection_chairs_section .new_collection_chairs_container', {
      grabCursor : true,
      spaceBetween : 10,
      loop: false,
      slidesPerView: "auto",
      navigation: {
        nextEl: '.new_collection_chairs_module .swiper-button-next',
        prevEl: '.new_collection_chairs_module .swiper-button-prev',
      },
      on: {
          slideChange: function () {
              updateNavButtons();
          }
      }
    })

    $('.new_collection_chairs_module .button-prev').click(function(){
      reviews_swipers.slidePrev();
    })
    $('.new_collection_chairs_module .button-next').click(function(){
      reviews_swipers.slideNext();
    })

    $('.new_collection_chairs_container').mouseenter(function() {
      updateNavButtons()
    })


    function updateNavButtons() {
      if (reviews_swipers.isBeginning) {
          $('.new_collection_chairs_module .button-prev').addClass('button-prev-opacity-0').removeClass('button-prev-opacity-1');
          $('.new_collection_chairs_module .button-next').addClass('button-next-opacity-1').removeClass('button-next-opacity-0');
      } else if (reviews_swipers.isEnd) {
          $('.new_collection_chairs_module .button-prev').addClass('button-prev-opacity-1').removeClass('button-prev-opacity-0');
          $('.new_collection_chairs_module .button-next').addClass('button-next-opacity-0').removeClass('button-next-opacity-1');
      } else {
          $('.new_collection_chairs_module .button-prev').addClass('button-prev-opacity-1').removeClass('button-prev-opacity-0');
          $('.new_collection_chairs_module .button-next').addClass('button-next-opacity-1').removeClass('button-next-opacity-0');
      }
    }
  
</script>

