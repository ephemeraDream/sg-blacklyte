<style>
  .home_moments_collection{
    padding: 100px 0px 100px;
    position: relative;
    user-select: none;
    background-color: #F5F5F5;
  }
  .home_moments_collection .review-wrapper {
    margin-left: 16%;
  }
  .home_moments_collection .review-list .swiper-wrapper {
    transition-timing-function: linear !important;
  }
  .home_moments_collection img{
    width: 100%;
    object-fit: contain;
    height: auto;
    border-radius: 24px;
  }
  .home_moments_collection .review-title{
    font: 600 40px "Roboto";
    color: #262629;
    text-align: left;
    line-height: 1.4;
    margin-top: 0;
    margin-bottom: 0;
  }
  .home_moments_collection .review-list {
    margin-top: 50px;
  }
  .home_moments_collection .review-link {
    font: 400 22px "Roboto";
    color: #76767F;
  }
  .home_moments_collection .inner{
    background: #ffffff;
    border: 1px solid #EDEFF2;
    border-radius: 24px;
  }
  .home_moments_collection .img-box{
    background-color: #f5f5f5;
    border-radius: 24px;
  }
  
  
  .home_moments_collection .swiper-pagination{
    bottom: 30px;
  }
  .home_moments_collection .swiper-pagination .swiper-pagination-bullet{
    width: 30px;
    height: 4px;
    display: inline-block;
    border-radius: 0;
    background: rgba(217, 217, 217, 1);
  }
  .home_moments_collection .swiper-pagination .swiper-pagination-bullet.swiper-pagination-bullet-active{
    background: #D9D9D9;
  }

  .home_moments_collection .btn{
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(186, 186, 186, 0.3);
    cursor: pointer;
    text-align: center;
    line-height: 48px;
    margin-right: 25px;
  }
  .home_moments_collection .btn.button-next svg {
    transform: rotate(180deg);
  }
  .home_moments_collection .btn svg {
    width: 12px;
    height: 12px;
    fill: none;
    stroke: none;
  }
  .home_moments_collection .btn:hover svg path{
    stroke: #429BFF;
  }
 
  @media only screen and (max-width: 1265px){
    .home_moments_collection{
      padding: 128px 0 40px;
    }
  }
  @media only screen and (max-width: 1024px){
    .home_moments_collection{
      padding: 72px 0 32px;
    }
    .home_moments_collection .review-wrapper{
      padding-left: 0;
      padding-right: 0;
    }
    .home_moments_collection .review-title{
      margin-bottom: 32px;
    }
    .home_moments_collection .swiper-pagination .swiper-pagination-bullet {
      width: 40px;
    }
  }
  @media only screen and (max-width: 991px){
    .home_moments_collection{
      padding: 72px 0 32px;
      padding-right: 0;
    }
    
    .home_moments_collection .review-title{
      font-size: 28px;
      line-height:1.28;
    }
  }
  @media(max-width: 767px) {
    .home_moments_collection .section-header {
      max-width: 100%;
    }
    .home_moments_collection .review-link {
      font-size: 14px;
    }
    .home_moments_collection .review-wrapper {
      width: 100%;
      margin-left: 0;
      padding-right: 20px;
      padding-left: 10px;
    }
    .home_moments_collection .review-title {
      font-size: 24px;
      max-width: 100%;
    }
    .home_moments_collection .review-list{
      margin-top: 25px;
    }
    .home_moments_collection .swiper-pagination .swiper-pagination-bullet {
      width: 40px;
    }
    .home_moments_collection .review-title{
      font-size: 24px;
      line-height: 1.3;
    }
    .home_moments_collection .info-title {
      min-height: 48px;
    }
    .home_moments_collection .btn {
      margin-right: 9px;
    }
    .home_moments_collection .swiper-pagination {
      bottom: 0;
    }
    .home_moments_collection img,
    .home_moments_collection .inner,
    .home_moments_collection .img-box {
      border-radius: 20px;
    }
  }
  /* IPad */
  @media(min-width: 768px) and (max-width: 1024px) {
    .home_moments_collection .review-wrapper{
      margin-left: 0;
    }
  }
  @media(min-width: 1025px) and (max-width: 1480px){
    .home_moments_collection .review-wrapper{
      margin-left: var(--margin-left-1);
    }
  }
</style>

<section class="home_moments_collection">
  <div class="container-full review-wrapper">
    {% if section.settings.title != blank %}
      <h3 class="review-title">{{ section.settings.title }}</h3>
    {% endif %}
    <div style="position: relative;">
      <div class="review-list swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="item swiper-slide">
              <div class="inner">
                <div class="img-box">
                  <img src="{{ block.settings.avatar | img_url:'master' }}" loading="lazy">
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
    new Swiper('.home_moments_collection .review-list',{
      loop: true,
      observer: true,
      observeParents: true,
      // grabCursor : true,
      slidesPerView : '1.4',
      spaceBetween : 16,
      speed: 5000,
      autoplay: {
        delay: 0,
        disableOnInteraction: false
      },
      breakpoints: { 
        320: {  //当屏幕宽度大于等于320
          slidesPerView: 1,
        },
        992: {  //当屏幕宽度大于等于768 
          slidesPerView: 3,
        },
        1280: {  //当屏幕宽度大于等于1280
          slidesPerView: 4,
        }
      }
    })
    
</script>

{% schema %}
{
  "name": "HOME MOMENTS NEW",
  "limit": 1,
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Section title",
      "default": "Moments that define esports greatness"
    }
  ],
  "blocks": [
      {
        "type": "item",
        "name": "item",
        "settings": [
          {
              "type" : "image_picker",
              "id" : "avatar",
              "label" : "Avatar"
          }
        ]
      } 
  ],
  "presets": [
    {
      "name": "HOME MOMENTS NEW"
    }
  ]
}
{% endschema %}
