          <rect width="40" height="40" fill="white"/>
          </clipPath>
          </defs>
        </svg>
      </div>
    </div>
  </div>
</div>

<script>
  new Swiper('.desk_swiper_simplicity_swiper', {
    {% comment %} loop: true, {% endcomment %}
    navigation: {
      nextEl: '.desk_swiper_simplicity_swiper_next',
      prevEl: '.desk_swiper_simplicity_swiper_prev',
    },
    breakpoints: {
      768: {
        spaceBetween: 22,
        slidesPerView: 'auto',
      },
      0: {
        spaceBetween: 10,
        slidesPerView: 1,
      },
    },
  });
</script>

{% schema %}
{
  "name": "desk swiper simplicity",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "specId",
      "label": "specId"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "title"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "sub title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "description"
    }
  ],
  "blocks": [
    {
      "type": "swiperItem",
      "name": "swiper Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "swiper_image",
          "label": "swiper image"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "desk swiper simplicity"
    }
  ]
}
{% endschema %}
