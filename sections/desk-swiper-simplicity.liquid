{{ 'section-desk-swiper-simplicity.css' | asset_url | stylesheet_tag }}

<div class="desk_swiper_simplicity" id="{{ section.settings.specId }}">
  <div class="desk_swiper_simplicity_info">
    <div class="desk_swiper_simplicity_subtitle">{{ section.settings.sub_title }}</div>
    <div class="desk_swiper_simplicity_title">{{ section.settings.title }}</div>
    <div class="desk_swiper_simplicity_desc">{{ section.settings.description }}</div>
  </div>
  <div class="desk_swiper_simplicity_swiper swiper">
    <div class="swiper-wrapper">
      {% for item in section.blocks %}
        <div class="swiper-slide">
          <div class="desk_swiper_simplicity_swiper_image">
            {% assign srcset_1x = item.settings.swiper_image | image_url: width: 1728 | append: ' 1x, ' %}
            {% assign srcset_2x = item.settings.swiper_image | image_url: width: 670 | append: ' 2x, ' %}
            {% assign srcset_3x = item.settings.swiper_image | image_url: width: 670 | append: ' 3x, ' %}
            {% assign srcset_init = srcset_1x | append: srcset_2x | append: srcset_3x %}
            {{-
              item.settings.swiper_image
              | image_url: width: item.settings.swiper_image.width
              | image_tag: sizes: '(min-width:769px) 45vw, 100vw', srcset: srcset_init, alt: section.settings.title
            -}}
          </div>
          {% if item.settings.description != blank %}
            <div class="desk_swiper_simplicity_swiper_desc">{{ item.settings.description }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
